@model GardenHub.Models.ViewModels.DashboardViewModel
@using GardenHub.Models.Enums

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="mb-4">
        <h1 class="display-4"><i class="bi bi-speedometer2"></i> Dashboard</h1>
        <p class="lead">Welcome to your GardenHub dashboard - Your complete garden management overview</p>
    </div>

    <!-- Equipment Maintenance Notifications -->
    @if (Model.EquipmentUnderMaintenance.Any() || Model.EquipmentMaintenanceRequested.Any())
    {
        <div class="card mb-4 shadow border-warning">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">
                    <i class="bi bi-exclamation-triangle-fill"></i> Equipment Maintenance Alerts
                </h3>
            </div>
            <div class="card-body">
                <!-- Status Summary Cards in Single Row -->
                <div class="row g-2 mb-3">
                    <div class="col-md-4">
                        <div class="card bg-danger text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-tools" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.EquipmentUnderMaintenance.Count</h4>
                                <p class="mb-0 small">Under Maintenance</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-warning text-dark h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-exclamation-triangle" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.EquipmentMaintenanceRequested.Count</h4>
                                <p class="mb-0 small">Maintenance Requested</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.OperationalEquipmentCount</h4>
                                <p class="mb-0 small">Operational</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.EquipmentUnderMaintenance.Any())
                {
                    <div class="alert alert-danger mb-3">
                        <h5 class="alert-heading">
                            <i class="bi bi-tools"></i> Equipment Under Maintenance
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var equipment in Model.EquipmentUnderMaintenance)
                            {
                                var activeRecord = equipment.MaintenanceRecords?
                                    .FirstOrDefault(mr => mr.Status == MaintenanceStatus.UnderMaintenance);
                                var downtime = activeRecord?.MaintenanceStartDate.HasValue == true 
                                    ? DateTime.UtcNow - activeRecord.MaintenanceStartDate.Value 
                                    : TimeSpan.Zero;

                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start mb-2">
                                            @if (ViewData[$"EquipmentImage_{equipment.EquipmentId}"] != null)
                                            {
                                                <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" 
                                                     alt="@equipment.EquipmentName" 
                                                     class="rounded me-2" 
                                                     style="width: 60px; height: 60px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="bi bi-tools text-white fs-4"></i>
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0"><strong>@equipment.EquipmentName</strong></h6>
                                                <p class="mb-0 small text-muted">@equipment.EquipmentType</p>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-info">
                                                <i class="bi bi-house-door"></i> @equipment.Garden?.GardenName
                                            </span>
                                        </div>
                                        <p class="mb-1 small">
                                            <i class="bi bi-clock text-danger"></i> 
                                            <strong>Downtime:</strong> 
                                            @if (downtime.Days > 0)
                                            {
                                                <text>@downtime.Days day(s) </text>
                                            }
                                            @downtime.Hours hour(s) @downtime.Minutes min
                                        </p>
                                        @if (activeRecord != null)
                                        {
                                            <p class="mb-2 small">
                                                <strong>Started:</strong> @activeRecord.MaintenanceStartDate?.ToString("MMM dd, h:mm tt")
                                            </p>
                                        }
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" 
                                               class="btn btn-sm btn-outline-danger flex-fill">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            @if (equipment.Garden != null)
                                            {
                                                <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@equipment.Garden.GardenId" 
                                                   class="btn btn-sm btn-outline-primary flex-fill">
                                                    <i class="bi bi-house-door"></i> Garden
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.EquipmentMaintenanceRequested.Any())
                {
                    <div class="alert alert-warning mb-0">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i> Maintenance Requested
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var equipment in Model.EquipmentMaintenanceRequested)
                            {
                                var activeRecord = equipment.MaintenanceRecords?
                                    .FirstOrDefault(mr => mr.Status == MaintenanceStatus.MaintenanceRequested);
                                var daysAgo = activeRecord != null 
                                    ? (DateTime.UtcNow - activeRecord.RequestDate).Days 
                                    : 0;

                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start mb-2">
                                            @if (ViewData[$"EquipmentImage_{equipment.EquipmentId}"] != null)
                                            {
                                                <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" 
                                                     alt="@equipment.EquipmentName" 
                                                     class="rounded me-2" 
                                                     style="width: 60px; height: 60px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="bi bi-tools text-white fs-4"></i>
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0"><strong>@equipment.EquipmentName</strong></h6>
                                                <p class="mb-0 small text-muted">@equipment.EquipmentType</p>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-info">
                                                <i class="bi bi-house-door"></i> @equipment.Garden?.GardenName
                                            </span>
                                        </div>
                                        @if (activeRecord != null)
                                        {
                                            <p class="mb-1 small">
                                                <i class="bi bi-calendar-event text-warning"></i> 
                                                <strong>Requested:</strong> @daysAgo day(s) ago
                                            </p>
                                            @if (!string.IsNullOrWhiteSpace(activeRecord.Notes))
                                            {
                                                <p class="mb-2 small text-muted" style="
                                                    display: -webkit-box;
                                                    -webkit-line-clamp: 2;
                                                    -webkit-box-orient: vertical;
                                                    overflow: hidden;
                                                    text-overflow: ellipsis;">
                                                    <strong>Notes:</strong> @activeRecord.Notes
                                                </p>
                                            }
                                        }
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" 
                                               class="btn btn-sm btn-outline-warning flex-fill">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            @if (equipment.Garden != null)
                                            {
                                                <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@equipment.Garden.GardenId" 
                                                   class="btn btn-sm btn-outline-primary flex-fill">
                                                    <i class="bi bi-house-door"></i> Garden
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Summary Statistics Cards -->
    <div class="row g-2 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-flower3" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalPlants</h2>
                            <p class="mb-0">Total Plants</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Plants" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Plants
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-tree" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalGardens</h2>
                            <p class="mb-0">Total Gardens</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Gardens" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Gardens
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-tools" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalEquipment</h2>
                            <p class="mb-0">Total Equipment</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Equipments" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Equipment
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-clipboard-data" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalDailyRecords</h2>
                            <p class="mb-0">Total Records</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="DailyRecords" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Records
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Environmental Averages (Last 30 Days) -->
    @if (Model.TotalDailyRecords > 0)
    {
        <div class="mb-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-thermometer-half"></i> Environmental Averages (Last 30 Days)
                    </h4>
                </div>
                <div class="card-body">
                    <div class="dashboard-env-row">
                        <div class="dashboard-env-item">
                            <h5 class="fs-6 mb-2">Inside Temperature</h5>
                            <p class="display-6 text-info mb-0">@Model.AverageInsideTemperature°F</p>
                        </div>
                        <div class="dashboard-env-item">
                            <h5 class="fs-6 mb-2">Outside Temperature</h5>
                            <p class="display-6 text-warning mb-0">@Model.AverageOutsideTemperature°F</p>
                        </div>
                        <div class="dashboard-env-item">
                            <h5 class="fs-6 mb-2">Inside Humidity</h5>
                            <p class="display-6 text-primary mb-0">@Model.AverageInsideHumidity%</p>
                        </div>
                        <div class="dashboard-env-item">
                            <h5 class="fs-6 mb-2">Outside Humidity</h5>
                            <p class="display-6 text-success mb-0">@Model.AverageOutsideHumidity%</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Distribution Charts -->
    <div class="dashboard-charts-row mb-4">
        @if (Model.GardensByType.Any())
        {
            <div class="dashboard-chart-item">
                <div class="card chart-card shadow h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Gardens by Type</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.GardensByType.OrderByDescending(x => x.Value))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key
                                    <span class="badge bg-primary rounded-pill">@item.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (Model.PlantsByType.Any())
        {
            <div class="dashboard-chart-item">
                <div class="card chart-card shadow h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Plants by Type</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.PlantsByType.OrderByDescending(x => x.Value))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key
                                    <span class="badge bg-success rounded-pill">@item.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (Model.EquipmentByType.Any())
        {
            <div class="dashboard-chart-item">
                <div class="card chart-card shadow h-100">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Equipment by Type</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.EquipmentByType.OrderByDescending(x => x.Value))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key
                                    <span class="badge bg-danger rounded-pill">@item.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Quick Access to Gardens -->
    <div class="mb-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-grid-3x3"></i> Quick Access to Gardens
                </h4>
                <a asp-controller="Gardens" asp-action="Create" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Create New Garden
                </a>
            </div>
            <div class="card-body">
                @if (Model.AllGardens.Any())
                {
                    <div class="dashboard-gardens-grid">
                        @foreach (var garden in Model.AllGardens)
                        {
                            <div class="dashboard-garden-card">
                                <div class="card h-100 shadow-sm">
                                    <img src="@ViewData[$"GardenImage_{garden.GardenId}"]" class="card-img-top" alt="@garden.GardenName" style="height: 150px; object-fit: cover;" />
                                    <div class="card-body p-2">
                                        <h6 class="card-title mb-2 text-truncate" title="@garden.GardenName">@garden.GardenName</h6>
                                        <p class="card-text small text-muted mb-2">
                                            <span class="badge bg-secondary small">@garden.Type</span>
                                            <span class="badge bg-info small">@garden.GardenGrowMethod</span>
                                        </p>
                                    </div>
                                    <div class="card-footer p-2">
                                        <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@garden.GardenId" class="btn btn-sm btn-primary w-100">
                                            <i class="bi bi-speedometer2"></i> Dashboard
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No gardens created yet. <a asp-controller="Gardens" asp-action="Create">Create your first garden!</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Activity Tabs -->
    <div class="mb-4">
        <div class="card shadow">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-clock-history"></i> Recent Activity
                </h4>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs" id="recentActivityTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="recent-plants-tab" data-bs-toggle="tab" data-bs-target="#recent-plants" type="button" role="tab" aria-controls="recent-plants" aria-selected="true">
                            <i class="bi bi-flower3"></i> Plants (@Model.RecentPlants.Count)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="recent-records-tab" data-bs-toggle="tab" data-bs-target="#recent-records" type="button" role="tab" aria-controls="recent-records" aria-selected="false">
                            <i class="bi bi-clipboard-data"></i> Records (@Model.RecentDailyRecords.Count)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="recent-journal-tab" data-bs-toggle="tab" data-bs-target="#recent-journal" type="button" role="tab" aria-controls="recent-journal" aria-selected="false">
                            <i class="bi bi-journal-text"></i> Journal (@Model.RecentJournalEntries.Count)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="recent-equipment-tab" data-bs-toggle="tab" data-bs-target="#recent-equipment" type="button" role="tab" aria-controls="recent-equipment" aria-selected="false">
                            <i class="bi bi-tools"></i> Equipment (@Model.RecentEquipment.Count)
                        </button>
                    </li>
                </ul>

                <div class="tab-content border border-top-0 p-3" id="recentActivityTabsContent">
                    <!-- Recent Plants -->
                    <div class="tab-pane fade show active" id="recent-plants" role="tabpanel" aria-labelledby="recent-plants-tab">
                        @if (Model.RecentPlants.Any())
                        {
                            <div class="dashboard-activity-grid">
                                @foreach (var plant in Model.RecentPlants)
                                {
                                    <div class="dashboard-activity-card">
                                        <div class="card shadow-sm h-100">
                                            <img src="@ViewData[$"PlantImage_{plant.PlantId}"]" class="card-img-top" alt="@plant.PlantName" style="height: 120px; object-fit: cover;" />
                                            <div class="card-body p-2">
                                                <h6 class="card-title small mb-1 text-truncate" title="@plant.PlantName">@plant.PlantName</h6>
                                                <p class="card-text small text-muted mb-1">
                                                    <small class="text-truncate d-block" title="@plant.Garden?.GardenName">@plant.Garden?.GardenName</small>
                                                </p>
                                                <p class="card-text small mb-0">
                                                    <small>@plant.DatePlanted.ToShortDateString()</small>
                                                </p>
                                            </div>
                                            <div class="card-footer p-1">
                                                <a asp-controller="Plants" asp-action="Details" asp-route-id="@plant.PlantId" class="btn btn-sm btn-outline-success w-100">View</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">No recent plants.</div>
                        }
                    </div>

                    <!-- Recent Daily Records -->
                    <div class="tab-pane fade" id="recent-records" role="tabpanel" aria-labelledby="recent-records-tab">
                        @if (Model.RecentDailyRecords.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Garden</th>
                                            <th>Inside Temp</th>
                                            <th>Humidity</th>
                                            <th>Water</th>
                                            <th>Nutrients</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var record in Model.RecentDailyRecords)
                                        {
                                            <tr>
                                                <td>@record.CreatedDate.ToShortDateString()</td>
                                                <td class="text-truncate" style="max-width: 150px;">@record.Garden?.GardenName</td>
                                                <td>@record.InsideTemperature°F</td>
                                                <td>@record.InsideHumidity%</td>
                                                <td>@record.WaterAmount</td>
                                                <td>@record.NutrientAmount</td>
                                                <td>
                                                    <a asp-controller="DailyRecords" asp-action="Details" asp-route-id="@record.RecordId" class="btn btn-sm btn-outline-info">View</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">No recent daily records.</div>
                        }
                    </div>

                    <!-- Recent Journal Entries -->
                    <div class="tab-pane fade" id="recent-journal" role="tabpanel" aria-labelledby="recent-journal-tab">
                        @if (Model.RecentJournalEntries.Any())
                        {
                            <div class="dashboard-journal-grid">
                                @foreach (var entry in Model.RecentJournalEntries)
                                {
                                    <div class="dashboard-journal-card">
                                        <div class="card shadow-sm h-100">
                                            @if (entry.ImageData != null)
                                            {
                                                <img src="@ViewData[$"JournalImage_{entry.EntryId}"]" class="card-img-top" alt="Journal Entry" style="height: 150px; object-fit: cover;" />
                                            }
                                            <div class="card-body p-2">
                                                <h6 class="card-subtitle mb-2 text-muted small">
                                                    @entry.EntryDate.ToShortDateString() - @entry.Garden?.GardenName
                                                </h6>
                                                <p class="card-text small">@(entry.Content.Length > 100 ? entry.Content.Substring(0, 100) + "..." : entry.Content)</p>
                                            </div>
                                            <div class="card-footer p-1">
                                                <a asp-controller="JournalEntries" asp-action="Details" asp-route-id="@entry.EntryId" class="btn btn-sm btn-outline-warning w-100">View</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">No recent journal entries.</div>
                        }
                    </div>

                    <!-- Recent Equipment -->
                    <div class="tab-pane fade" id="recent-equipment" role="tabpanel" aria-labelledby="recent-equipment-tab">
                        @if (Model.RecentEquipment.Any())
                        {
                            <div class="dashboard-activity-grid">
                                @foreach (var equipment in Model.RecentEquipment)
                                {
                                    <div class="dashboard-activity-card">
                                        <div class="card shadow-sm h-100">
                                            <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" class="card-img-top" alt="@equipment.EquipmentName" style="height: 120px; object-fit: cover;" />
                                            <div class="card-body p-2">
                                                <h6 class="card-title small mb-1 text-truncate" title="@equipment.EquipmentName">@equipment.EquipmentName</h6>
                                                <p class="card-text small text-muted mb-1">
                                                    <small class="text-truncate d-block" title="@equipment.Garden?.GardenName">@equipment.Garden?.GardenName</small>
                                                </p>
                                                <p class="card-text small mb-0">
                                                    <span class="badge bg-secondary">@equipment.EquipmentType</span>
                                                </p>
                                            </div>
                                            <div class="card-footer p-1">
                                                <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" class="btn btn-sm btn-outline-danger w-100">View</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
