@model IEnumerable<GardenHub.Models.Equipment>

@{
    ViewData["Title"] = "Equipment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4"><i class="bi bi-tools"></i> Equipment</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-danger btn-lg">
                <i class="bi bi-plus-circle"></i> Add New Equipment
            </a>
        </div>
    </div>

    <!-- Statistics Cards - Single Row -->
    <div class="row g-3 mb-4">
        <div class="col">
            <div class="card bg-danger text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-tools fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count()</h4>
                    <small>Total Equipment</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-currency-dollar fs-2"></i>
                    <h4 class="mt-2 mb-0">$@Model.Sum(e => e.PurchasePrice).ToString("N0")</h4>
                    <small>Total Investment</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-warning text-dark shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-wrench fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(e => (DateTime.UtcNow - e.LastMaintenanceDate).Days > 30)</h4>
                    <small>Needs Maintenance</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-info text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-calculator fs-2"></i>
                    <h4 class="mt-2 mb-0">$@(Model.Any() ? Model.Average(e => e.PurchasePrice).ToString("N0") : "0")</h4>
                    <small>Avg Price</small>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTable Card -->
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-table"></i> All Equipment</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="equipmentTable" class="table table-striped table-hover table-bordered" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Equipment Name</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Purchase Date</th>
                            <th>Price</th>
                            <th>Last Maintenance</th>
                            <th>Garden</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var daysSinceMaintenance = (DateTime.UtcNow - item.LastMaintenanceDate).Days;
                            var maintenanceStatus = daysSinceMaintenance > 60 ? "danger" : daysSinceMaintenance > 30 ? "warning" : "success";
                            
                            <tr>
                                <td class="text-center">
                                    @if (ViewData[$"EquipmentImage_{item.EquipmentId}"] != null && !string.IsNullOrEmpty(ViewData[$"EquipmentImage_{item.EquipmentId}"]!.ToString()))
                                    {
                                        <img src="@ViewData[$"EquipmentImage_{item.EquipmentId}"]" alt="@item.EquipmentName" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="bi bi-tools text-muted fs-4"></i>
                                        </div>
                                    }
                                </td>
                                <td><strong>@item.EquipmentName</strong></td>
                                <td>@(item.EquipmentDescription.Length > 60 ? item.EquipmentDescription.Substring(0, 60) + "..." : item.EquipmentDescription)</td>
                                <td><span class="badge bg-danger">@item.EquipmentType</span></td>
                                <td data-order="@item.PurchaseDate.ToString("yyyy-MM-dd")">
                                    @item.PurchaseDate.ToShortDateString()
                                    <br><small class="text-muted">(@((DateTime.UtcNow - item.PurchaseDate).Days) days ago)</small>
                                </td>
                                <td data-order="@item.PurchasePrice"><strong class="text-success">$@item.PurchasePrice.ToString("N2")</strong></td>
                                <td data-order="@item.LastMaintenanceDate.ToString("yyyy-MM-dd")">
                                    @item.LastMaintenanceDate.ToShortDateString()
                                    <br><span class="badge bg-@maintenanceStatus">@daysSinceMaintenance days ago</span>
                                </td>
                                <td>
                                    @if (item.Garden != null)
                                    {
                                        <span class="badge bg-primary">@item.Garden.GardenName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-nowrap">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.EquipmentId" class="btn btn-primary" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#equipmentTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                order: [[4, 'desc']],
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search equipment...",
                    lengthMenu: "Show _MENU_ items",
                    info: "Showing _START_ to _END_ of _TOTAL_ items",
                    infoEmpty: "No equipment available",
                    infoFiltered: "(filtered from _MAX_ total items)",
                    paginate: {
                        first: '<i class="bi bi-chevron-double-left"></i>',
                        previous: '<i class="bi bi-chevron-left"></i>',
                        next: '<i class="bi bi-chevron-right"></i>',
                        last: '<i class="bi bi-chevron-double-right"></i>'
                    }
                },
                columnDefs: [
                    { orderable: false, targets: [0, 8] },
                    { className: 'text-center', targets: [0, 8] }
                ]
            });
        });
    </script>
}
