@{
    ViewData["Title"] = "About GrowHub";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0 bg-gradient" style="background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);">
                <div class="card-body text-center text-white py-5">
                    <img src="~/img/GrowHubLogo.png" alt="GardenHub Logo" class="mb-4" style="max-width: 550px;">
                    <h1 class="display-2 text-info fw-bold mt-3 mb-3">About GardenHub</h1>
                    <p class="lead text-info fs-4">Cultivating Success, One Garden at a Time</p>
                    <div class="mt-4">
                        <span class="badge bg-white text-success fs-5 me-2">
                            <i class="bi bi-flower3"></i> Smart Garden Management
                        </span>
                        <span class="badge bg-white text-success fs-5">
                            <i class="bi bi-graph-up"></i> Data-Driven Growing
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mission Statement -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0"><i class="bi bi-bullseye"></i> Our Mission</h2>
                </div>
                <div class="card-body p-5">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <p class="fs-5 mb-4">
                                <strong>GardenHub</strong> is your comprehensive digital companion for modern gardening. 
                                We believe that successful gardening comes from understanding your plants, tracking environmental 
                                conditions, and learning from your experiences.
                            </p>
                            <p class="fs-6 text-muted mb-4">
                                Whether you're a seasoned horticulturist managing multiple greenhouses, a hobbyist tending 
                                to your backyard vegetable garden, or a beginner exploring indoor hydroponics, GardenHub 
                                provides the tools you need to grow with confidence.
                            </p>
                            <blockquote class="blockquote border-start border-success border-5 ps-4 py-2 bg-light">
                                <p class="mb-0 fst-italic">
                                    "Empowering gardeners to make informed decisions through comprehensive tracking, 
                                    analytics, and documentation."
                                </p>
                            </blockquote>
                        </div>
                        <div class="col-lg-4 text-center">
                            <i class="bi bi-award-fill text-success" style="font-size: 10rem; opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- What is GardenHub -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-info-circle"></i> What is GardenHub?</h2>
                </div>
                <div class="card-body p-4">
                    <p class="fs-5 mb-4">
                        GardenHub is a modern web-based garden management platform designed to help you organize, 
                        monitor, and optimize your gardening activities. Built with cutting-edge technology, it brings 
                        together all aspects of garden management into one intuitive interface.
                    </p>
                    
                    <div class="row g-4 mt-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary text-white rounded-circle p-3" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-clipboard-data fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Comprehensive Tracking</h5>
                                    <p class="text-muted">
                                        Monitor temperature, humidity, VPD, lighting schedules, watering routines, 
                                        and nutrient applications all in one place.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-success text-white rounded-circle p-3" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-graph-up fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Visual Analytics</h5>
                                    <p class="text-muted">
                                        Transform your garden data into meaningful insights with interactive charts 
                                        and visualizations that reveal trends and patterns.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-info text-white rounded-circle p-3" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-journal-text fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Digital Garden Journal</h5>
                                    <p class="text-muted">
                                        Document your growing journey with photos, notes, and observations that build 
                                        your personal gardening knowledge base.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-warning text-white rounded-circle p-3" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-house-door fs-4"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>Multi-Garden Management</h5>
                                    <p class="text-muted">
                                        Manage indoor, outdoor, and greenhouse gardens with different growing methods 
                                        including soil, hydroponic, and aeroponic systems.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Who Should Use GardenHub -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-people"></i> Who Should Use GardenHub?</h2>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="bi bi-person-badge text-info" style="font-size: 4rem;"></i>
                                    <h4 class="mt-3 mb-3">Home Gardeners</h4>
                                    <p class="text-muted">
                                        Perfect for hobbyists and enthusiasts who want to take their home gardening 
                                        to the next level with organized tracking and insights.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="bi bi-briefcase text-success" style="font-size: 4rem;"></i>
                                    <h4 class="mt-3 mb-3">Professional Growers</h4>
                                    <p class="text-muted">
                                        Ideal for commercial growers who need to maintain detailed records, optimize 
                                        conditions, and maximize yields across multiple growing operations.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card h-100 border-warning">
                                <div class="card-body text-center">
                                    <i class="bi bi-mortarboard text-warning" style="font-size: 4rem;"></i>
                                    <h4 class="mt-3 mb-3">Learning Enthusiasts</h4>
                                    <p class="text-muted">
                                        Great for beginners and students who want to learn through experimentation 
                                        and data-driven insights about plant care and cultivation.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Benefits -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0"><i class="bi bi-hand-thumbs-up"></i> Key Benefits</h2>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <div class="d-flex align-items-start mb-4">
                                <i class="bi bi-check-circle-fill text-success fs-3 me-3 mt-1"></i>
                                <div>
                                    <h5>Make Data-Driven Decisions</h5>
                                    <p class="text-muted mb-0">
                                        Stop guessing and start growing with confidence. Track environmental conditions 
                                        and see exactly what works best for your plants.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-start mb-4">
                                <i class="bi bi-check-circle-fill text-success fs-3 me-3 mt-1"></i>
                                <div>
                                    <h5>Save Time and Resources</h5>
                                    <p class="text-muted mb-0">
                                        Optimize watering schedules, nutrient applications, and lighting to reduce waste 
                                        and improve efficiency in your garden operations.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-start">
                                <i class="bi bi-check-circle-fill text-success fs-3 me-3 mt-1"></i>
                                <div>
                                    <h5>Build Your Knowledge Base</h5>
                                    <p class="text-muted mb-0">
                                        Create a searchable history of your gardening experiences, successes, and 
                                        lessons learned that you can reference year after year.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="d-flex align-items-start mb-4">
                                <i class="bi bi-check-circle-fill text-success fs-3 me-3 mt-1"></i>
                                <div>
                                    <h5>Monitor Plant Health</h5>
                                    <p class="text-muted mb-0">
                                        Track individual plant conditions, growth stages, and care activities to catch 
                                        problems early and maintain optimal health.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-start mb-4">
                                <i class="bi bi-check-circle-fill text-success fs-3 me-3 mt-1"></i>
                                <div>
                                    <h5>Stay Organized</h5>
                                    <p class="text-muted mb-0">
                                        Keep all your garden information, equipment inventory, and maintenance schedules 
                                        in one centralized, easy-to-access location.
                                    </p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-start">
                                <i class="bi bi-check-circle-fill text-success fs-3 me-3 mt-1"></i>
                                <div>
                                    <h5>Access Anywhere</h5>
                                    <p class="text-muted mb-0">
                                        Web-based platform means you can manage your gardens from any device with 
                                        an internet connection—at home or on the go.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Technology & Security -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0"><i class="bi bi-shield-check"></i> Technology & Security</h2>
                </div>
                <div class="card-body p-4">
                    <p class="fs-5 mb-4">
                        Built with modern, enterprise-grade technology to ensure your data is secure, accessible, and reliable.
                    </p>
                    
                    <div class="row g-4">
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="bi bi-filetype-cs text-primary" style="font-size: 3rem;"></i>
                                <h6 class="mt-3 mb-1">C# 13.0</h6>
                                <small class="text-muted">Latest .NET 9 Framework</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="bi bi-shield-lock-fill text-success" style="font-size: 3rem;"></i>
                                <h6 class="mt-3 mb-1">Secure Authentication</h6>
                                <small class="text-muted">ASP.NET Core Identity</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="bi bi-database-fill text-info" style="font-size: 3rem;"></i>
                                <h6 class="mt-3 mb-1">Reliable Data Storage</h6>
                                <small class="text-muted">Entity Framework Core</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <i class="bi bi-phone text-warning" style="font-size: 3rem;"></i>
                                <h6 class="mt-3 mb-1">Responsive Design</h6>
                                <small class="text-muted">Bootstrap 5</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Your Privacy Matters:</strong> Your garden data is private and secure. We use industry-standard 
                        encryption and authentication to protect your information.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Our Story -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-book"></i> Our Story</h2>
                </div>
                <div class="card-body p-5">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <p class="fs-5 mb-4">
                                GardenHub was born from a simple observation: modern gardeners needed better tools to 
                                manage the increasing complexity of cultivation techniques and environmental monitoring.
                            </p>
                            <p class="mb-4">
                                As gardening evolved from simple soil cultivation to include hydroponics, aeroponics, 
                                and controlled environment agriculture, the need for comprehensive tracking and analytics 
                                became clear. Traditional paper journals and spreadsheets couldn't keep pace with the 
                                data demands of modern growing.
                            </p>
                            <p class="mb-4">
                                We created GardenHub to bridge this gap—combining the wisdom of traditional gardening 
                                with the power of modern technology. Our goal is to make professional-grade garden 
                                management accessible to everyone, from backyard hobbyists to commercial operations.
                            </p>
                            <div class="mt-4 p-4 bg-light rounded border-start border-primary border-5">
                                <p class="mb-2"><strong>Version 1.0.0</strong> represents months of development, testing, 
                                and refinement based on real-world gardening needs.</p>
                                <p class="mb-0 text-muted small">Released November 2025</p>
                            </div>
                        </div>
                        <div class="col-lg-4 text-center">
                            <i class="bi bi-lightbulb-fill text-warning" style="font-size: 10rem; opacity: 0.8;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0 bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-center text-info py-5">
                    <h2 class="display-5 mb-3">Ready to Transform Your Gardening?</h2>
                    <p class="lead mb-4">
                        Join the growing community of gardeners who are cultivating success with GardenHub.
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-area="" asp-controller="Home" asp-action="Features" class="btn btn-light btn-lg">
                            <i class="bi bi-stars"></i> Explore Features
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Dashboard" class="btn btn-success btn-lg">
                            <i class="bi bi-speedometer2"></i> Get Started
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-outline-info btn-lg">
                            <i class="bi bi-envelope"></i> Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
        }

        .bg-gradient {
            position: relative;
            overflow: hidden;
        }

        .bg-gradient::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.1);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .bg-gradient:hover::before {
            opacity: 1;
        }
    </style>
}
