@model GardenHub.Models.Garden

@{
    ViewData["Title"] = "Garden Dashboard";
}

<div class="container-fluid">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <h1 class="display-4 mb-0">@Model.GardenName Dashboard</h1>
        <div class="d-flex flex-column flex-sm-row gap-2">
            <a asp-action="Edit" asp-route-id="@Model.GardenId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Edit Garden</span>
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> <span class="d-none d-sm-inline">Back to Gardens</span>
            </a>
        </div>
    </div>

    <!-- Garden Overview Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Garden Overview</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-md-4 text-center">
                    <img src="@ViewData["GardenImage"]" alt="@Model.GardenName" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover; width: 100%;" />
                </div>
                <div class="col-12 col-md-8">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.GardenDescription</dd>

                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.GardenLocation</dd>

                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">Grow Method:</dt>
                        <dd class="col-sm-8">@Model.GardenGrowMethod</dd>

                        <dt class="col-sm-4">Start Date:</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">End Date:</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card text-white bg-success shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.Plants.Count</h2>
                    <p class="card-text mb-0">Plants</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-white bg-info shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.DailyRecords.Count</h2>
                    <p class="card-text mb-0">Daily Records</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-white bg-warning shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.JournalEntries.Count</h2>
                    <p class="card-text mb-0">Journal Entries</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-white bg-danger shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.Equipments.Count</h2>
                    <p class="card-text mb-0">Equipment</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs for Different Sections -->
    <ul class="nav nav-tabs flex-column flex-sm-row" id="dashboardTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="plants-tab" data-bs-toggle="tab" data-bs-target="#plants" type="button" role="tab" aria-controls="plants" aria-selected="true">
                <i class="bi bi-flower3 d-md-none"></i> Plants (@Model.Plants.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="records-tab" data-bs-toggle="tab" data-bs-target="#records" type="button" role="tab" aria-controls="records" aria-selected="false">
                <i class="bi bi-clipboard-data d-md-none"></i> Records (@Model.DailyRecords.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="journal-tab" data-bs-toggle="tab" data-bs-target="#journal" type="button" role="tab" aria-controls="journal" aria-selected="false">
                <i class="bi bi-journal-text d-md-none"></i> Journal (@Model.JournalEntries.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="equipment-tab" data-bs-toggle="tab" data-bs-target="#equipment" type="button" role="tab" aria-controls="equipment" aria-selected="false">
                <i class="bi bi-tools d-md-none"></i> Equipment (@Model.Equipments.Count)
            </button>
        </li>
    </ul>

    <div class="tab-content border border-top-0 p-3" id="dashboardTabsContent">
        <!-- Plants Tab -->
        <div class="tab-pane fade show active" id="plants" role="tabpanel" aria-labelledby="plants-tab">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
                <h4 class="mb-0">Plants in this Garden</h4>
                <a asp-controller="Plants" asp-action="Create" asp-route-gardenId="@Model.GardenId" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Plant
                </a>
            </div>
            @if (Model.Plants.Any())
            {
                <div class="row g-3">
                    @foreach (var plant in Model.Plants.OrderBy(p => p.PlantName))
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100 shadow-sm">
                                <img src="@ViewData[$"PlantImage_{plant.PlantId}"]" class="card-img-top" alt="@plant.PlantName" style="height: 200px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title">@plant.PlantName</h5>
                                    <p class="card-text text-truncate">@plant.PlantDescription</p>
                                    <div class="mb-2">
                                        <span class="badge bg-primary">@plant.PlantType</span>
                                        <span class="badge bg-info">@plant.LightingRequirement</span>
                                        @if (plant.PlantCondition.HasValue)
                                        {
                                            <span class="badge bg-@(plant.PlantCondition == GardenHub.Models.Enums.PlantCondition.Healthy ? "success" : plant.PlantCondition == GardenHub.Models.Enums.PlantCondition.Wilting ? "warning" : "danger")">
                                                @plant.PlantCondition
                                            </span>
                                        }
                                    </div>
                                    <p class="small text-muted mb-0">Planted: @plant.DatePlanted.ToShortDateString()</p>
                                </div>
                                <div class="card-footer bg-transparent d-flex gap-1">
                                    <a asp-controller="Plants" asp-action="Details" asp-route-id="@plant.PlantId" class="btn btn-sm btn-outline-primary flex-fill">Details</a>
                                    <a asp-controller="Plants" asp-action="Edit" asp-route-id="@plant.PlantId" class="btn btn-sm btn-outline-warning flex-fill">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No plants added to this garden yet.
                </div>
            }
        </div>

        <!-- Daily Records Tab -->
        <div class="tab-pane fade" id="records" role="tabpanel" aria-labelledby="records-tab">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
                <h4 class="mb-0">Daily Records</h4>
                <a asp-controller="DailyRecords" asp-action="Create" asp-route-gardenId="@Model.GardenId" class="btn btn-info btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Record
                </a>
            </div>
            @if (Model.DailyRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th class="d-none d-md-table-cell">Inside Temp</th>
                                <th class="d-none d-lg-table-cell">Outside Temp</th>
                                <th class="d-none d-md-table-cell">Inside Humidity</th>
                                <th class="d-none d-lg-table-cell">Outside Humidity</th>
                                <th class="d-none d-lg-table-cell">Water</th>
                                <th class="d-none d-lg-table-cell">Nutrients</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.DailyRecords.OrderByDescending(r => r.CreatedDate))
                            {
                                <tr>
                                    <td>@record.CreatedDate.ToShortDateString()</td>
                                    <td class="d-none d-md-table-cell">@record.InsideTemperature°F</td>
                                    <td class="d-none d-lg-table-cell">@record.OutsideTemperature°F</td>
                                    <td class="d-none d-md-table-cell">@record.InsideHumidity%</td>
                                    <td class="d-none d-lg-table-cell">@record.OutsideHumidity%</td>
                                    <td class="d-none d-lg-table-cell">@record.WaterAmount</td>
                                    <td class="d-none d-lg-table-cell">@record.NutrientAmount</td>
                                    <td>
                                        <div class="d-flex flex-column flex-sm-row gap-1">
                                            <a asp-controller="DailyRecords" asp-action="Details" asp-route-id="@record.RecordId" class="btn btn-sm btn-outline-primary">Details</a>
                                            <a asp-controller="DailyRecords" asp-action="Edit" asp-route-id="@record.RecordId" class="btn btn-sm btn-outline-warning">Edit</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No daily records added yet.
                </div>
            }
        </div>

        <!-- Journal Entries Tab -->
        <div class="tab-pane fade" id="journal" role="tabpanel" aria-labelledby="journal-tab">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
                <h4 class="mb-0">Journal Entries</h4>
                <a asp-controller="JournalEntries" asp-action="Create" asp-route-gardenId="@Model.GardenId" class="btn btn-warning btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Entry
                </a>
            </div>
            @if (Model.JournalEntries.Any())
            {
                <div class="row g-3">
                    @foreach (var entry in Model.JournalEntries.OrderByDescending(e => e.EntryDate))
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card shadow-sm h-100">
                                @if (entry.ImageData != null)
                                {
                                    <img src="@ViewData[$"JournalImage_{entry.EntryId}"]" class="card-img-top" alt="Journal Entry" style="height: 200px; object-fit: cover;" />
                                }
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">@entry.EntryDate.ToLongDateString()</h6>
                                    <p class="card-text">@entry.Content</p>
                                </div>
                                <div class="card-footer bg-transparent d-flex gap-1">
                                    <a asp-controller="JournalEntries" asp-action="Details" asp-route-id="@entry.EntryId" class="btn btn-sm btn-outline-primary flex-fill">Details</a>
                                    <a asp-controller="JournalEntries" asp-action="Edit" asp-route-id="@entry.EntryId" class="btn btn-sm btn-outline-warning flex-fill">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No journal entries added yet.
                </div>
            }
        </div>

        <!-- Equipment Tab -->
        <div class="tab-pane fade" id="equipment" role="tabpanel" aria-labelledby="equipment-tab">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-3 gap-2">
                <h4 class="mb-0">Equipment</h4>
                <a asp-controller="Equipments" asp-action="Create" asp-route-gardenId="@Model.GardenId" class="btn btn-danger btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Equipment
                </a>
            </div>
            @if (Model.Equipments.Any())
            {
                <div class="row g-3">
                    @foreach (var equipment in Model.Equipments.OrderBy(e => e.EquipmentName))
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100 shadow-sm">
                                <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" class="card-img-top" alt="@equipment.EquipmentName" style="height: 200px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title">@equipment.EquipmentName</h5>
                                    <p class="card-text text-truncate">@equipment.EquipmentDescription</p>
                                    <div class="mb-2">
                                        <span class="badge bg-secondary">@equipment.EquipmentType</span>
                                    </div>
                                    <p class="small text-muted mb-1">Purchase: @equipment.PurchaseDate.ToShortDateString()</p>
                                    <p class="small text-muted mb-1">Price: @equipment.PurchasePrice.ToString("C")</p>
                                    <p class="small text-muted mb-0">Maintenance: @equipment.LastMaintenanceDate.ToShortDateString()</p>
                                </div>
                                <div class="card-footer bg-transparent d-flex gap-1">
                                    <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" class="btn btn-sm btn-outline-primary flex-fill">Details</a>
                                    <a asp-controller="Equipments" asp-action="Edit" asp-route-id="@equipment.EquipmentId" class="btn btn-sm btn-outline-warning flex-fill">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No equipment added to this garden yet.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tabs
        var triggerTabList = [].slice.call(document.querySelectorAll('#dashboardTabs button'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', function (event) {
                event.preventDefault()
                tabTrigger.show()
            })
        })
    </script>
}