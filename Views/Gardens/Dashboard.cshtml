@model GardenHub.Models.ViewModels.GardenDashboardViewModel
@using GardenHub.Models.Enums

@{
    ViewData["Title"] = "Garden Dashboard";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0">@Model.Garden.GardenName Dashboard</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Garden.GardenId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Garden
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Gardens
            </a>
        </div>
    </div>

    <!-- Equipment Maintenance Notifications -->
    @if (Model.EquipmentUnderMaintenance.Any() || Model.EquipmentMaintenanceRequested.Any())
    {
        <div class="card mb-4 shadow border-warning">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">
                    <i class="bi bi-exclamation-triangle-fill"></i> Equipment Maintenance Alerts
                </h3>
            </div>
            <div class="card-body">
                @if (Model.EquipmentUnderMaintenance.Any())
                {
                    <div class="alert alert-danger mb-3">
                        <h5 class="alert-heading">
                            <i class="bi bi-tools"></i> Equipment Under Maintenance (@Model.EquipmentUnderMaintenance.Count)
                        </h5>
                        <hr />
                        <div class="row g-3">
                            @foreach (var equipment in Model.EquipmentUnderMaintenance)
                            {
                                var activeRecord = equipment.MaintenanceRecords?
                                    .FirstOrDefault(mr => mr.Status == MaintenanceStatus.UnderMaintenance);
                                var downtime = activeRecord?.MaintenanceStartDate.HasValue == true 
                                    ? DateTime.UtcNow - activeRecord.MaintenanceStartDate.Value 
                                    : TimeSpan.Zero;

                                <div class="col-md-6">
                                    <div class="card bg-light h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start">
                                                @if (ViewData[$"EquipmentImage_{equipment.EquipmentId}"] != null)
                                                {
                                                    <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" 
                                                         alt="@equipment.EquipmentName" 
                                                         class="rounded me-3" 
                                                         style="width: 80px; height: 80px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded me-3 d-flex align-items-center justify-content-center" 
                                                         style="width: 80px; height: 80px;">
                                                        <i class="bi bi-tools text-white fs-2"></i>
                                                    </div>
                                                }
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">
                                                        <strong>@equipment.EquipmentName</strong>
                                                    </h6>
                                                    <p class="mb-1 small text-muted">@equipment.EquipmentType</p>
                                                    <p class="mb-1">
                                                        <i class="bi bi-clock text-danger"></i> 
                                                        <strong>Downtime:</strong> 
                                                        @if (downtime.Days > 0)
                                                        {
                                                            <text>@downtime.Days day(s) </text>
                                                        }
                                                        @downtime.Hours hour(s) @downtime.Minutes min
                                                    </p>
                                                    @if (activeRecord != null)
                                                    {
                                                        <p class="mb-0 small">
                                                            <strong>Started:</strong> @activeRecord.MaintenanceStartDate?.ToString("MMM dd, yyyy h:mm tt")
                                                        </p>
                                                    }
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" 
                                                   class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.EquipmentMaintenanceRequested.Any())
                {
                    <div class="alert alert-warning mb-0">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i> Maintenance Requested (@Model.EquipmentMaintenanceRequested.Count)
                        </h5>
                        <hr />
                        <div class="row g-3">
                            @foreach (var equipment in Model.EquipmentMaintenanceRequested)
                            {
                                var activeRecord = equipment.MaintenanceRecords?
                                    .FirstOrDefault(mr => mr.Status == MaintenanceStatus.MaintenanceRequested);
                                var daysAgo = activeRecord != null 
                                    ? (DateTime.UtcNow - activeRecord.RequestDate).Days 
                                    : 0;

                                <div class="col-md-6">
                                    <div class="card bg-light h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start">
                                                @if (ViewData[$"EquipmentImage_{equipment.EquipmentId}"] != null)
                                                {
                                                    <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" 
                                                         alt="@equipment.EquipmentName" 
                                                         class="rounded me-3" 
                                                         style="width: 80px; height: 80px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded me-3 d-flex align-items-center justify-content-center" 
                                                         style="width: 80px; height: 80px;">
                                                        <i class="bi bi-tools text-white fs-2"></i>
                                                    </div>
                                                }
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">
                                                        <strong>@equipment.EquipmentName</strong>
                                                    </h6>
                                                    <p class="mb-1 small text-muted">@equipment.EquipmentType</p>
                                                    @if (activeRecord != null)
                                                    {
                                                        <p class="mb-1">
                                                            <i class="bi bi-calendar-event text-warning"></i> 
                                                            <strong>Requested:</strong> @daysAgo day(s) ago
                                                        </p>
                                                        @if (!string.IsNullOrWhiteSpace(activeRecord.Notes))
                                                        {
                                                            <p class="mb-0 small text-muted">
                                                                <strong>Notes:</strong> @activeRecord.Notes
                                                            </p>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" 
                                                   class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Garden Overview Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Garden Overview</h3>
        </div>
        <div class="card-body">
            <div class="garden-overview-layout">
                <div class="garden-overview-image">
                    <img src="@ViewData["GardenImage"]" alt="@Model.Garden.GardenName" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover; width: 100%;" />
                </div>
                <div class="garden-overview-details">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Garden.GardenDescription</dd>

                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.Garden.GardenLocation</dd>

                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">@Model.Garden.Type</dd>

                        <dt class="col-sm-4">Grow Method:</dt>
                        <dd class="col-sm-8">@Model.Garden.GardenGrowMethod</dd>

                        <dt class="col-sm-4">Start Date:</dt>
                        <dd class="col-sm-8">@Model.Garden.StartDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">End Date:</dt>
                        <dd class="col-sm-8">@Model.Garden.EndDate.ToShortDateString()</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="garden-stats-row mb-4">
        <div class="garden-stat-card">
            <div class="card text-white bg-success shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.Garden.Plants.Count</h2>
                    <p class="card-text mb-0">Plants</p>
                </div>
            </div>
        </div>
        <div class="garden-stat-card">
            <div class="card text-white bg-info shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.Garden.DailyRecords.Count</h2>
                    <p class="card-text mb-0">Daily Records</p>
                </div>
            </div>
        </div>
        <div class="garden-stat-card">
            <div class="card text-white bg-warning shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.Garden.JournalEntries.Count</h2>
                    <p class="card-text mb-0">Journal Entries</p>
                </div>
            </div>
        </div>
        <div class="garden-stat-card">
            <div class="card text-white bg-danger shadow h-100">
                <div class="card-body text-center p-3">
                    <h2 class="display-5 mb-2">@Model.Garden.Equipments.Count</h2>
                    <p class="card-text mb-0">Equipment</p>
                    @if (Model.EquipmentUnderMaintenance.Any() || Model.EquipmentMaintenanceRequested.Any())
                    {
                        <small class="d-block mt-1">
                            <i class="bi bi-exclamation-triangle"></i> 
                            @(Model.EquipmentUnderMaintenance.Count + Model.EquipmentMaintenanceRequested.Count) needs attention
                        </small>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Current Conditions Card -->
    @if (Model.MostRecentRecord != null)
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="bi bi-thermometer-half"></i> Current Conditions</h3>
                <small class="text-white">Last Updated: @Model.MostRecentRecord.CreatedDate.ToString("MMM dd, yyyy h:mm tt")</small>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <!-- Inside Conditions -->
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-house-door"></i> Inside Conditions</h5>
                        <div class="row g-2">
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-thermometer text-danger fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.InsideTemperature°F</h4>
                                        <small class="text-muted">Temperature</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-droplet text-primary fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.InsideHumidity%</h4>
                                        <small class="text-muted">Humidity</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-activity text-warning fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.InsideVPD kPa</h4>
                                        <small class="text-muted">VPD</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-brightness-high text-warning fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.LightingIntensity%</h4>
                                        <small class="text-muted">Light Intensity</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Outside Conditions -->
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-cloud-sun"></i> Outside Conditions</h5>
                        <div class="row g-2">
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-thermometer text-danger fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.OutsideTemperature°F</h4>
                                        <small class="text-muted">Temperature</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-droplet text-primary fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.OutsideHumidity%</h4>
                                        <small class="text-muted">Humidity</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-activity text-warning fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.OutsideVPD kPa</h4>
                                        <small class="text-muted">VPD</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="bi bi-sun text-warning fs-3"></i>
                                        <h4 class="mb-0">@Model.MostRecentRecord.LightingOn - @Model.MostRecentRecord.LightingOff</h4>
                                        <small class="text-muted">Lighting Hours</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Info -->
                    <div class="col-12">
                        <hr class="my-3" />
                        <div class="row g-2">
                            <div class="col-md-3 col-sm-6">
                                <div class="card bg-info bg-opacity-10">
                                    <div class="card-body text-center">
                                        <i class="bi bi-droplet-fill text-info fs-3"></i>
                                        <h5 class="mb-0">@Model.MostRecentRecord.WaterAmount</h5>
                                        <small class="text-muted">Water Amount</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="card bg-success bg-opacity-10">
                                    <div class="card-body text-center">
                                        <i class="bi bi-moisture text-success fs-3"></i>
                                        <h5 class="mb-0">@Model.MostRecentRecord.NutrientAmount</h5>
                                        <small class="text-muted">Nutrient Amount</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                @if (!string.IsNullOrWhiteSpace(Model.MostRecentRecord.Notes))
                                {
                                    <div class="card bg-warning bg-opacity-10">
                                        <div class="card-body">
                                            <h6 class="mb-2"><i class="bi bi-sticky"></i> Notes:</h6>
                                            <p class="mb-0 small">@Model.MostRecentRecord.Notes</p>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="card bg-light">
                                        <div class="card-body text-center text-muted">
                                            <i class="bi bi-sticky"></i> No notes recorded
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="DailyRecords" asp-action="Details" asp-route-id="@Model.MostRecentRecord.RecordId" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-eye"></i> View Full Record
                    </a>
                    <a asp-controller="DailyRecords" asp-action="Create" class="btn btn-sm btn-info">
                        <i class="bi bi-plus-circle"></i> Add New Record
                    </a>
                    <a asp-controller="GardenCare" asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId"
                       class="btn btn-sm btn-success">
                        <i class="bi bi-clipboard-check"></i> Record Garden Care
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i> No daily records available yet. 
            <a asp-controller="DailyRecords" asp-action="Create" class="alert-link">Create your first record</a> to see current conditions.
        </div>
    }

    <!-- Charts Section -->
    @if (Model.Garden.DailyRecords.Any())
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="bi bi-graph-up"></i> Environmental Data Charts</h3>
                <form asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" method="get" class="d-flex gap-2">
                    <select name="month" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                        @foreach (var option in Model.AvailableMonths)
                        {
                            <option value="@option.Month" 
                                    data-year="@option.Year"
                                    selected="@(option.Month == Model.SelectedMonth && option.Year == Model.SelectedYear)">
                                @option.DisplayText
                            </option>
                        }
                    </select>
                    <input type="hidden" name="year" value="@Model.SelectedYear" id="selectedYear" />
                </form>
            </div>
            <div class="card-body">
                @if (Model.ChartLabels.Any())
                {
                    <div class="row">
                        <!-- Temperature Chart -->
                        <div class="col-12 mb-4">
                            <h5 class="text-center mb-3">Temperature Tracking (°F)</h5>
                            <canvas id="temperatureChart"></canvas>
                        </div>
                        
                        <!-- Humidity Chart -->
                        <div class="col-12 mb-4">
                            <h5 class="text-center mb-3">Humidity Tracking (%)</h5>
                            <canvas id="humidityChart"></canvas>
                        </div>
                        
                        <!-- VPD Chart -->
                        <div class="col-12 mb-4">
                            <h5 class="text-center mb-3">VPD Tracking (kPa)</h5>
                            <canvas id="vpdChart"></canvas>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No daily records found for @(new DateTime(Model.SelectedYear, Model.SelectedMonth, 1).ToString("MMMM yyyy")).
                    </div>
                }
            </div>
        </div>
    }

    <!-- Tabs for Different Sections -->
    <ul class="nav nav-tabs garden-nav-tabs" id="dashboardTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="plants-tab" data-bs-toggle="tab" data-bs-target="#plants" type="button" role="tab" aria-controls="plants" aria-selected="true">
                <i class="bi bi-flower3"></i> Plants (@Model.Garden.Plants.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="records-tab" data-bs-toggle="tab" data-bs-target="#records" type="button" role="tab" aria-controls="records" aria-selected="false">
                <i class="bi bi-clipboard-data"></i> Records (@Model.Garden.DailyRecords.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="journal-tab" data-bs-toggle="tab" data-bs-target="#journal" type="button" role="tab" aria-controls="journal" aria-selected="false">
                <i class="bi bi-journal-text"></i> Journal (@Model.Garden.JournalEntries.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="equipment-tab" data-bs-toggle="tab" data-bs-target="#equipment" type="button" role="tab" aria-controls="equipment" aria-selected="false">
                <i class="bi bi-tools"></i> Equipment (@Model.Garden.Equipments.Count)
            </button>
        </li>
        <!-- Add this tab button to the existing nav-tabs -->
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="care-tab" data-bs-toggle="tab" data-bs-target="#care" type="button" role="tab" aria-controls="care" aria-selected="false">
                <i class="bi bi-clipboard-check"></i> Care Activities (@Model.Garden.CareActivities.Count)
            </button>
        </li>
    </ul>

    <div class="tab-content border border-top-0 p-3" id="dashboardTabsContent">
        <!-- Plants Tab -->
        <div class="tab-pane fade show active" id="plants" role="tabpanel" aria-labelledby="plants-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Plants in this Garden</h4>
                <a asp-controller="Plants" asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Plant
                </a>
            </div>
            @if (Model.Garden.Plants.Any())
            {
                <div class="garden-plants-grid">
                    @foreach (var plant in Model.Garden.Plants.OrderBy(p => p.PlantName))
                    {
                        <div class="garden-plant-card">
                            <div class="card h-100 shadow-sm">
                                <img src="@ViewData[$"PlantImage_{plant.PlantId}"]" class="card-img-top" alt="@plant.PlantName" style="height: 200px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title">@plant.PlantName</h5>
                                    <p class="card-text text-truncate">@plant.PlantDescription</p>
                                    <div class="mb-2">
                                        <span class="badge bg-primary">@plant.PlantType</span>
                                        <span class="badge bg-info">@plant.LightingRequirement</span>
                                        @if (plant.PlantCondition.HasValue)
                                        {
                                            <span class="badge bg-@(plant.PlantCondition == GardenHub.Models.Enums.PlantCondition.Healthy ? "success" : plant.PlantCondition == GardenHub.Models.Enums.PlantCondition.Wilting ? "warning" : "danger")">
                                                @plant.PlantCondition
                                            </span>
                                        }
                                    </div>
                                    <p class="small text-muted mb-0">Planted: @plant.DatePlanted.ToShortDateString()</p>
                                </div>
                                <div class="card-footer bg-transparent d-flex gap-1">
                                    <a asp-controller="Plants" asp-action="Details" asp-route-id="@plant.PlantId" class="btn btn-sm btn-outline-primary flex-fill">Details</a>
                                    <a asp-controller="Plants" asp-action="Edit" asp-route-id="@plant.PlantId" class="btn btn-sm btn-outline-warning flex-fill">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No plants added to this garden yet.
                </div>
            }
        </div>

        <!-- Daily Records Tab -->
        <div class="tab-pane fade" id="records" role="tabpanel" aria-labelledby="records-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Daily Records</h4>
                <a asp-controller="DailyRecords" asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-info btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Record
                </a>
            </div>
            @if (Model.Garden.DailyRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover garden-records-table">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Inside Temp</th>
                                <th>Outside Temp</th>
                                <th>Inside Humidity</th>
                                <th>Outside Humidity</th>
                                <th>Water</th>
                                <th>Nutrients</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.Garden.DailyRecords.OrderByDescending(r => r.CreatedDate))
                            {
                                <tr>
                                    <td>@record.CreatedDate.ToShortDateString()</td>
                                    <td>@record.InsideTemperature°F</td>
                                    <td>@record.OutsideTemperature°F</td>
                                    <td>@record.InsideHumidity%</td>
                                    <td>@record.OutsideHumidity%</td>
                                    <td>@record.WaterAmount</td>
                                    <td>@record.NutrientAmount</td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <a asp-controller="DailyRecords" asp-action="Details" asp-route-id="@record.RecordId" class="btn btn-sm btn-outline-primary">Details</a>
                                            <a asp-controller="DailyRecords" asp-action="Edit" asp-route-id="@record.RecordId" class="btn btn-sm btn-outline-warning">Edit</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No daily records added yet.
                </div>
            }
        </div>

        <!-- Journal Entries Tab -->
        <div class="tab-pane fade" id="journal" role="tabpanel" aria-labelledby="journal-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Journal Entries</h4>
                <a asp-controller="JournalEntries" asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-warning btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Entry
                </a>
            </div>
            @if (Model.Garden.JournalEntries.Any())
            {
                <div class="garden-journal-grid">
                    @foreach (var entry in Model.Garden.JournalEntries.OrderByDescending(e => e.EntryDate))
                    {
                        <div class="garden-journal-card">
                            <div class="card shadow-sm h-100">
                                @if (entry.ImageData != null)
                                {
                                    <img src="@ViewData[$"JournalImage_{entry.EntryId}"]" class="card-img-top" alt="Journal Entry" style="height: 200px; object-fit: cover;" />
                                }
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">@entry.EntryDate.ToLongDateString()</h6>
                                    <p class="card-text">@entry.Content</p>
                                </div>
                                <div class="card-footer bg-transparent d-flex gap-1">
                                    <a asp-controller="JournalEntries" asp-action="Details" asp-route-id="@entry.EntryId" class="btn btn-sm btn-outline-primary flex-fill">Details</a>
                                    <a asp-controller="JournalEntries" asp-action="Edit" asp-route-id="@entry.EntryId" class="btn btn-sm btn-outline-warning flex-fill">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No journal entries added yet.
                </div>
            }
        </div>

        <!-- Equipment Tab -->
        <div class="tab-pane fade" id="equipment" role="tabpanel" aria-labelledby="equipment-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Equipment</h4>
                <a asp-controller="Equipments" asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-danger btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Equipment
                </a>
            </div>
            @if (Model.Garden.Equipments.Any())
            {
                <div class="garden-equipment-grid">
                    @foreach (var equipment in Model.Garden.Equipments.OrderBy(e => e.EquipmentName))
                    {
                        <div class="garden-equipment-card">
                            <div class="card h-100 shadow-sm">
                                <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" class="card-img-top" alt="@equipment.EquipmentName" style="height: 200px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title">@equipment.EquipmentName</h5>
                                    <p class="card-text text-truncate">@equipment.EquipmentDescription</p>
                                    <div class="mb-2">
                                        <span class="badge bg-secondary">@equipment.EquipmentType</span>
                                    </div>
                                    <p class="small text-muted mb-1">Purchase: @equipment.PurchaseDate.ToShortDateString()</p>
                                    <p class="small text-muted mb-1">Price: @equipment.PurchasePrice.ToString("C")</p>
                                    <p class="small text-muted mb-0">Maintenance: @equipment.LastMaintenanceDate.ToShortDateString()</p>
                                </div>
                                <div class="card-footer bg-transparent d-flex gap-1">
                                    <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" class="btn btn-sm btn-outline-primary flex-fill">Details</a>
                                    <a asp-controller="Equipments" asp-action="Edit" asp-route-id="@equipment.EquipmentId" class="btn btn-sm btn-outline-warning flex-fill">Edit</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No equipment added to this garden yet.
                </div>
            }
        </div>

        <!-- Add this tab pane to the existing tab-content -->
        <div class="tab-pane fade" id="care" role="tabpanel" aria-labelledby="care-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Garden Care Activities</h4>
                <div class="d-flex gap-2">
                    <a asp-controller="GardenCare" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-primary btn-sm">
                        <i class="bi bi-speedometer2"></i> View Care Dashboard
                    </a>
                    <a asp-controller="GardenCare" asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Record Activity
                    </a>
                </div>
            </div>
            @if (Model.Garden.CareActivities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Activities</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Garden.CareActivities.OrderByDescending(a => a.ActivityDate).Take(10))
                            {
                                <tr>
                                    <td>
                                        @activity.ActivityDate.ToString("MMM dd, yyyy")
                                        <br/><small class="text-muted">@activity.ActivityDate.ToString("h:mm tt")</small>
                                    </td>
                                    <td><span class="badge bg-primary">@activity.ActivityType</span></td>
                                    <td>
                                        <div class="d-flex flex-wrap gap-1">
                                            @if (activity.WateringPerformed)
                                            {
                                                <span class="badge bg-info" title="Watering"><i class="bi bi-droplet-fill"></i></span>
                                            }
                                            @if (activity.NutrientsAdded)
                                            {
                                                <span class="badge bg-success" title="Nutrients"><i class="bi bi-moisture"></i></span>
                                            }
                                            @if (activity.NewPlantingsAdded)
                                            {
                                                <span class="badge bg-primary" title="New Plantings"><i class="bi bi-flower3"></i></span>
                                            }
                                            @if (activity.WeedingPerformed)
                                            {
                                                <span class="badge bg-warning" title="Weeding"><i class="bi bi-trash"></i></span>
                                            }
                                            @if (activity.PruningPerformed)
                                            {
                                                <span class="badge bg-secondary" title="Pruning"><i class="bi bi-scissors"></i></span>
                                            }
                                            @if (activity.PestControlPerformed)
                                            {
                                                <span class="badge bg-danger" title="Pest Control"><i class="bi bi-bug"></i></span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (activity.ActivityDuration.HasValue)
                                        {
                                            <text>@activity.ActivityDuration min</text>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="GardenCare" asp-action="Details" asp-route-id="@activity.ActivityId" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="GardenCare" asp-action="Edit" asp-route-id="@activity.ActivityId" class="btn btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.Garden.CareActivities.Count > 10)
                {
                    <div class="text-center mt-3">
                        <a asp-controller="GardenCare" asp-action="Index" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-primary">
                            View All @Model.Garden.CareActivities.Count Activities
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No care activities recorded yet.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <script>
        // Initialize Bootstrap tabs
        var triggerTabList = [].slice.call(document.querySelectorAll('#dashboardTabs button'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', function (event) {
                event.preventDefault()
                tabTrigger.show()
            })
        })

        // Update hidden year field when month is selected
        document.querySelector('select[name="month"]').addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            var year = selectedOption.getAttribute('data-year');
            document.getElementById('selectedYear').value = year;
        });

        // Chart data from server
        var chartLabels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        var insideTemperatureData = @Html.Raw(Json.Serialize(Model.InsideTemperatureData));
        var outsideTemperatureData = @Html.Raw(Json.Serialize(Model.OutsideTemperatureData));
        var insideHumidityData = @Html.Raw(Json.Serialize(Model.InsideHumidityData));
        var outsideHumidityData = @Html.Raw(Json.Serialize(Model.OutsideHumidityData));
        var insideVPDData = @Html.Raw(Json.Serialize(Model.InsideVPDData));
        var outsideVPDData = @Html.Raw(Json.Serialize(Model.OutsideVPDData));

        // Common chart options
        var commonOptions = {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    mode: 'index',
                    intersect: false,
                }
            },
            scales: {
                x: {
                    display: true,
                    title: {
                        display: true,
                        text: 'Date'
                    }
                },
                y: {
                    display: true,
                    beginAtZero: false
                }
            }
        };

        // Temperature Chart
        if (chartLabels.length > 0) {
            var tempCtx = document.getElementById('temperatureChart').getContext('2d');
            new Chart(tempCtx, {
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [
                        {
                            label: 'Inside Temperature (°F)',
                            data: insideTemperatureData,
                            borderColor: 'rgb(255, 99, 132)',
                            backgroundColor: 'rgba(255, 99, 132, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Outside Temperature (°F)',
                            data: outsideTemperatureData,
                            borderColor: 'rgb(54, 162, 235)',
                            backgroundColor: 'rgba(54, 162, 235, 0.1)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    ...commonOptions,
                    scales: {
                        ...commonOptions.scales,
                        y: {
                            ...commonOptions.scales.y,
                            title: {
                                display: true,
                                text: 'Temperature (°F)'
                            }
                        }
                    }
                }
            });

            // Humidity Chart
            var humidityCtx = document.getElementById('humidityChart').getContext('2d');
            new Chart(humidityCtx, {
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [
                        {
                            label: 'Inside Humidity (%)',
                            data: insideHumidityData,
                            borderColor: 'rgb(75, 192, 192)',
                            backgroundColor: 'rgba(75, 192, 192, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Outside Humidity (%)',
                            data: outsideHumidityData,
                            borderColor: 'rgb(153, 102, 255)',
                            backgroundColor: 'rgba(153, 102, 255, 0.1)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    ...commonOptions,
                    scales: {
                        ...commonOptions.scales,
                        y: {
                            ...commonOptions.scales.y,
                            title: {
                                display: true,
                                text: 'Humidity (%)'
                            },
                            min: 0,
                            max: 100
                        }
                    }
                }
            });

            // VPD Chart
            var vpdCtx = document.getElementById('vpdChart').getContext('2d');
            new Chart(vpdCtx, {
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [
                        {
                            label: 'Inside VPD (kPa)',
                            data: insideVPDData,
                            borderColor: 'rgb(255, 159, 64)',
                            backgroundColor: 'rgba(255, 159, 64, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Outside VPD (kPa)',
                            data: outsideVPDData,
                            borderColor: 'rgb(201, 203, 207)',
                            backgroundColor: 'rgba(201, 203, 207, 0.1)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    ...commonOptions,
                    scales: {
                        ...commonOptions.scales,
                        y: {
                            ...commonOptions.scales.y,
                            title: {
                                display: true,
                                text: 'VPD (kPa)'
                            }
                        }
                    }
                }
            });
        }
    </script>
}