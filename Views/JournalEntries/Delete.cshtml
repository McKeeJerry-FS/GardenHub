@model GardenHub.Models.JournalEntry

@{
    ViewData["Title"] = "Delete Journal Entry";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-exclamation-triangle text-danger"></i> Delete Journal Entry</h1>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.EntryId" class="btn btn-info">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger shadow mb-4" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-octagon-fill fs-1 me-3"></i>
            <div>
                <h4 class="alert-heading mb-2">
                    <i class="bi bi-shield-exclamation"></i> Permanent Deletion Warning
                </h4>
                <p class="mb-0">
                    You are about to permanently delete this journal entry. This action <strong>cannot be undone</strong>.
                </p>
            </div>
        </div>
    </div>

    <!-- Entry Information Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-journal-text"></i> Entry to be Deleted</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5><i class="bi bi-calendar-event"></i> Entry Date</h5>
                    <p class="fs-4">@Model.EntryDate.ToString("MMMM dd, yyyy")</p>
                    <small class="text-muted">@((DateTime.UtcNow - Model.EntryDate).Days) days ago</small>
                </div>
                <div class="col-md-6">
                    <h5><i class="bi bi-house-door"></i> Garden</h5>
                    @if (Model.Garden != null)
                    {
                        <p class="fs-5"><span class="badge bg-primary fs-6">@Model.Garden.GardenDescription</span></p>
                    }
                    else
                    {
                        <p class="text-muted">No garden assigned</p>
                    }
                </div>
            </div>

            <hr />

            <!-- Entry Image -->
            @if (ViewData["EntryImage"] != null && !string.IsNullOrEmpty(ViewData["EntryImage"]!.ToString()))
            {
                <div class="text-center mb-4">
                    <h6 class="mb-3"><i class="bi bi-image"></i> Entry Image</h6>
                    <img src="@ViewData["EntryImage"]" alt="Journal Entry" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: contain;" />
                </div>
                <hr />
            }

            <!-- Entry Content -->
            <div>
                <h6><i class="bi bi-card-text"></i> Entry Content:</h6>
                <div class="p-3 bg-light rounded">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.Content</p>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="bi bi-fonts"></i> @Model.Content.Length characters | 
                        <i class="bi bi-chat-quote"></i> @Model.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length words
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Card -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="EntryId" />
        
        <div class="card shadow border-danger">
            <div class="card-body text-center">
                <h4 class="mb-4">
                    <i class="bi bi-question-circle text-danger"></i> 
                    Are you absolutely sure you want to delete this journal entry?
                </h4>
                
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('This will permanently delete this journal entry. Are you sure?')">
                        <i class="bi bi-trash"></i> Yes, Delete Permanently
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.EntryId" class="btn btn-info btn-lg">
                        <i class="bi bi-eye"></i> Review Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel, Keep Entry
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
