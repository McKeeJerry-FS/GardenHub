@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="hero-section text-center py-5">
                <img src="~/img/GrowHub_LandingLogo.png" alt="GardenHub Logo" class="img-fluid mb-4" style="max-width: 800px;" />
                <h1 class="display-3 fw-bold text-success mb-3">Welcome to GardenHub!</h1>
                <p class="lead fs-4 text-muted mb-4">Your modern web solution for caring for your gardens and plants</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap mb-4">
                    <a asp-area="" asp-controller="Home" asp-action="Dashboard" class="btn btn-success btn-lg">
                        <i class="bi bi-speedometer2"></i> Get Started
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Features" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-stars"></i> Explore Features
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-outline-info btn-lg">
                        <i class="bi bi-info-circle"></i> Learn More
                    </a>
                </div>
                <div class="badges-container d-flex gap-3 justify-content-center flex-wrap">
                    <span class="badge bg-success fs-6">
                        <i class="bi bi-check-circle"></i> Version 1.0.0
                    </span>
                    <span class="badge bg-primary fs-6">
                        <i class="bi bi-shield-check"></i> Secure & Private
                    </span>
                    <span class="badge bg-info fs-6">
                        <i class="bi bi-graph-up"></i> Data-Driven
                    </span>
                    <span class="badge bg-warning fs-6">
                        <i class="bi bi-speedometer"></i> Fast & Responsive
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Summary -->
