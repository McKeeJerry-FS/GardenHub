@model IEnumerable<GardenHub.Models.Plant>

@{
    ViewData["Title"] = "Plants";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4"><i class="bi bi-flower3"></i> Plants</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Add New Plant
            </a>
        </div>
    </div>

    <!-- Statistics Cards - Single Row -->
    <div class="row g-3 mb-4">
        <div class="col">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-flower3 fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count()</h4>
                    <small>Total Plants</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-heart-fill fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(p => p.PlantCondition == GardenHub.Models.Enums.PlantCondition.Healthy)</h4>
                    <small>Healthy</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-warning text-dark shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-exclamation-triangle fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(p => p.PlantCondition == GardenHub.Models.Enums.PlantCondition.Wilting)</h4>
                    <small>Wilting</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-danger text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-x-circle fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(p => p.PlantCondition == GardenHub.Models.Enums.PlantCondition.Dying)</h4>
                    <small>Dying</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-info text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-calendar-check fs-2"></i>
                    <h4 class="mt-2 mb-0">@(Model.Any() ? (int)Model.Average(p => (DateTime.UtcNow - p.DatePlanted).Days) : 0)</h4>
                    <small>Avg Days Old</small>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTable Card -->
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-table"></i> All Plants</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="plantsTable" class="table table-striped table-hover table-bordered" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Plant Name</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Lighting</th>
                            <th>Grow Method</th>
                            <th>Date Planted</th>
                            <th>Condition</th>
                            <th>Garden</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (ViewData[$"EntryImage_{item.PlantId}"] != null && !string.IsNullOrEmpty(ViewData[$"EntryImage_{item.PlantId}"]!.ToString()))
                                    {
                                        <img src="@ViewData[$"EntryImage_{item.PlantId}"]" alt="@item.PlantName" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="bi bi-flower3 text-muted fs-4"></i>
                                        </div>
                                    }
                                </td>
                                <td><strong>@item.PlantName</strong></td>
                                <td>@(item.PlantDescription.Length > 60 ? item.PlantDescription.Substring(0, 60) + "..." : item.PlantDescription)</td>
                                <td><span class="badge bg-primary">@item.PlantType</span></td>
                                <td><span class="badge bg-warning text-dark">@item.LightingRequirement</span></td>
                                <td><span class="badge bg-info">@item.GrowMethod</span></td>
                                <td data-order="@item.DatePlanted.ToString("yyyy-MM-dd")">
                                    @item.DatePlanted.ToShortDateString()
                                    <br><small class="text-muted">(@((DateTime.UtcNow - item.DatePlanted).Days) days)</small>
                                </td>
                                <td>
                                    @if (item.PlantCondition.HasValue)
                                    {
                                        var conditionBadge = item.PlantCondition == GardenHub.Models.Enums.PlantCondition.Healthy ? "success" :
                                                             item.PlantCondition == GardenHub.Models.Enums.PlantCondition.Wilting ? "warning" : "danger";
                                        var conditionIcon = item.PlantCondition == GardenHub.Models.Enums.PlantCondition.Healthy ? "heart-fill" :
                                                            item.PlantCondition == GardenHub.Models.Enums.PlantCondition.Wilting ? "exclamation-triangle-fill" : "x-circle-fill";
                                        <span class="badge bg-@conditionBadge">
                                            <i class="bi bi-@conditionIcon"></i> @item.PlantCondition
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unknown</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Garden != null)
                                    {
                                        <span class="badge bg-success">@item.Garden.GardenName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-nowrap">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.PlantId" class="btn btn-primary" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.PlantId" class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PlantId" class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#plantsTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                order: [[6, 'desc']],
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search plants...",
                    lengthMenu: "Show _MENU_ plants",
                    info: "Showing _START_ to _END_ of _TOTAL_ plants",
                    infoEmpty: "No plants available",
                    infoFiltered: "(filtered from _MAX_ total plants)",
                    paginate: {
                        first: '<i class="bi bi-chevron-double-left"></i>',
                        previous: '<i class="bi bi-chevron-left"></i>',
                        next: '<i class="bi bi-chevron-right"></i>',
                        last: '<i class="bi bi-chevron-double-right"></i>'
                    }
                },
                columnDefs: [
                    { orderable: false, targets: [0, 9] },
                    { className: 'text-center', targets: [0, 7, 9] }
                ]
            });
        });
    </script>
}
