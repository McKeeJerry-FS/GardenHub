@model GardenHub.Models.Reminder

@{
    ViewData["Title"] = "Delete Reminder";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0 bg-gradient" style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);">
                <div class="card-body text-center text-white py-4">
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-trash"></i> Delete Reminder
                    </h1>
                    <p class="lead mb-0">Are you sure you want to delete this reminder?</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> Warning!
                </h4>
                <p>You are about to permanently delete this reminder. This action cannot be undone.</p>
                <hr>
                <p class="mb-0">Please review the reminder details below before confirming deletion.</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-info-circle"></i> Reminder Details
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            <i class="bi bi-pencil"></i> Title
                        </dt>
                        <dd class="col-sm-9">
                            <h5>@Model.Title</h5>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-3">
                                <i class="bi bi-card-text"></i> Description
                            </dt>
                            <dd class="col-sm-9">
                                @Model.Description
                            </dd>
                        }

                        <dt class="col-sm-3">
                            <i class="bi bi-calendar3"></i> Due Date & Time
                        </dt>
                        <dd class="col-sm-9">
                            @Model.ReminderDateTime.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt")
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-tag"></i> Type
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.ReminderType</span>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-flag"></i> Priority
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Priority switch {
                                GardenHub.Models.Enums.ReminderPriority.Urgent => "bg-danger",
                                GardenHub.Models.Enums.ReminderPriority.High => "bg-warning text-dark",
                                GardenHub.Models.Enums.ReminderPriority.Low => "bg-secondary",
                                _ => "bg-primary"
                            })">@Model.Priority</span>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-check-circle"></i> Status
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.IsCompleted)
                            {
                                <span class="badge bg-success">Completed</span>
                                if (Model.CompletedDate.HasValue)
                                {
                                    <span class="text-muted"> on @Model.CompletedDate.Value.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                }
                            }
                            else if (Model.IsOverdue)
                            {
                                <span class="badge bg-danger">Overdue</span>
                            }
                            else if (Model.IsDueToday)
                            {
                                <span class="badge bg-warning text-dark">Due Today</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Active</span>
                            }
                        </dd>

                        @if (Model.IsRecurring)
                        {
                            <dt class="col-sm-3">
                                <i class="bi bi-arrow-repeat"></i> Recurring
                            </dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-purple">@Model.RecurrencePattern</span>
                                @if (Model.RecurrenceInterval.HasValue && Model.RecurrenceInterval.Value > 1)
                                {
                                    <span>(Every @Model.RecurrenceInterval.Value intervals)</span>
                                }
                            </dd>
                        }

                        @if (Model.Garden != null)
                        {
                            <dt class="col-sm-3">
                                <i class="bi bi-house-door"></i> Garden
                            </dt>
                            <dd class="col-sm-9">
                                @Model.Garden.GardenName
                            </dd>
                        }

                        @if (Model.DailyRecord != null)
                        {
                            <dt class="col-sm-3">
                                <i class="bi bi-clipboard-data"></i> Daily Record
                            </dt>
                            <dd class="col-sm-9">
                                Record from @Model.DailyRecord.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy")
                            </dd>
                        }

                        @if (Model.GardenCareActivity != null)
                        {
                            <dt class="col-sm-3">
                                <i class="bi bi-clipboard-heart"></i> Care Activity
                            </dt>
                            <dd class="col-sm-9">
                                @Model.GardenCareActivity.ActivityType
                            </dd>
                        }
                    </dl>

                    <hr />

                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Note:</strong> If this is a recurring reminder, deleting it will not affect future occurrences that have already been created.
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            <div class="card shadow mt-4">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ReminderId" />
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash-fill"></i> Delete Reminder
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Warning -->
            <div class="text-center mt-4 mb-4">
                <small class="text-muted">
                    <i class="bi bi-shield-exclamation"></i>
                    This action cannot be undone. The reminder will be permanently removed from your account.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
            color: white;
        }

        dl dt {
            font-weight: 600;
        }

        dl dd {
            margin-bottom: 1rem;
        }

        .card {
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
        }
    </style>
}
