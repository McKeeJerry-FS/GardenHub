@model GardenHub.Models.Equipment

@{
    ViewData["Title"] = "Equipment Details";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-tools"></i> @Model.EquipmentName</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.EquipmentId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Equipment
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Equipment Overview Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Equipment Overview</h3>
        </div>
        <div class="card-body">
            <div class="garden-overview-layout">
                <div class="garden-overview-image">
                    @if (ViewData["EquipmentImage"] != null && !string.IsNullOrEmpty(ViewData["EquipmentImage"]!.ToString()))
                    {
                        <img src="@ViewData["EquipmentImage"]" alt="@Model.EquipmentName" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover; width: 100%;" />
                    }
                    else
                    {
                        <div class="text-center p-5 bg-light rounded">
                            <i class="bi bi-tools text-muted" style="font-size: 5rem;"></i>
                            <p class="text-muted mt-2">No image available</p>
                        </div>
                    }
                </div>
                <div class="garden-overview-details">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Equipment Name:</dt>
                        <dd class="col-sm-8">
                            <h4 class="mb-0">@Html.DisplayFor(model => model.EquipmentName)</h4>
                        </dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EquipmentDescription)</dd>

                        <dt class="col-sm-4">Equipment Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-danger fs-6">@Html.DisplayFor(model => model.EquipmentType)</span>
                        </dd>

                        <dt class="col-sm-4">Purchase Price:</dt>
                        <dd class="col-sm-8">
                            <span class="fs-5 text-success">
                                <i class="bi bi-currency-dollar"></i> @Model.PurchasePrice.ToString("N2")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Garden:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Garden != null)
                            {
                                <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-house-door"></i> @Html.DisplayFor(model => model.Garden.GardenDescription)
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No garden assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Equipment Statistics Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-graph-up"></i> Equipment Statistics</h3>
        </div>
        <div class="card-body">
            <div class="garden-stats-row">
                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check text-success" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">
                                @{
                                    var daysSincePurchase = (DateTime.UtcNow - Model.PurchaseDate).Days;
                                }
                                @daysSincePurchase
                            </h3>
                            <p class="text-muted mb-0">Days Since Purchase</p>
                        </div>
                    </div>
                </div>

                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-wrench text-warning" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">
                                @{
                                    var daysSinceMaintenance = (DateTime.UtcNow - Model.LastMaintenanceDate).Days;
                                }
                                @daysSinceMaintenance
                            </h3>
                            <p class="text-muted mb-0">Days Since Maintenance</p>
                        </div>
                    </div>
                </div>

                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-currency-dollar text-success" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">$@Model.PurchasePrice.ToString("N2")</h3>
                            <p class="text-muted mb-0">Purchase Price</p>
                        </div>
                    </div>
                </div>

                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-tag text-danger" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">@Model.EquipmentType</h3>
                            <p class="text-muted mb-0">Equipment Type</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Timeline Information Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-clock-history"></i> Timeline & Maintenance</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card bg-light h-100">
                        <div class="card-body">
                            <h5 class="card-title border-bottom pb-2 mb-3">
                                <i class="bi bi-cart-check text-success"></i> Purchase Information
                            </h5>
                            <p class="mb-2"><strong>Purchase Date:</strong></p>
                            <p class="fs-5 text-muted">@Model.PurchaseDate.ToString("MMMM dd, yyyy")</p>
                            <small class="text-muted">@daysSincePurchase days ago</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card bg-light h-100">
                        <div class="card-body">
                            <h5 class="card-title border-bottom pb-2 mb-3">
                                <i class="bi bi-wrench-adjustable text-warning"></i> Last Maintenance
                            </h5>
                            <p class="mb-2"><strong>Maintenance Date:</strong></p>
                            <p class="fs-5 text-muted">@Model.LastMaintenanceDate.ToString("MMMM dd, yyyy")</p>
                            <small class="text-muted">@daysSinceMaintenance days ago</small>
                        </div>
                    </div>
                </div>

                @if (Model.Garden != null)
                {
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title border-bottom pb-2 mb-3">
                                    <i class="bi bi-house-door text-primary"></i> Garden Information
                                </h5>
                                <div class="row">
                                    <div class="col-md-4">
                                        <p class="mb-1"><strong>Garden Name:</strong></p>
                                        <p class="text-muted">@Model.Garden.GardenName</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p class="mb-1"><strong>Type:</strong></p>
                                        <p class="text-muted">@Model.Garden.Type</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p class="mb-1"><strong>Location:</strong></p>
                                        <p class="text-muted">@Model.Garden.GardenLocation</p>
                                    </div>
                                </div>
                                <div class="text-center mt-3">
                                    <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-outline-primary">
                                        <i class="bi bi-speedometer2"></i> View Garden Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h3>
        </div>
        <div class="card-body">
            <div class="d-flex gap-2 flex-wrap justify-content-center">
                <a asp-action="Edit" asp-route-id="@Model?.EquipmentId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Equipment
                </a>
                @if (Model.Garden != null)
                {
                    <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Go to Garden
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> View All Equipment
                </a>
            </div>
        </div>
    </div>
</div>
