@model GardenHub.Models.Garden

@{
    ViewData["Title"] = "Delete Garden";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-exclamation-triangle text-danger"></i> Delete Garden</h1>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.GardenId" class="btn btn-info">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger shadow mb-4" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-octagon-fill fs-1 me-3"></i>
            <div>
                <h4 class="alert-heading mb-2">
                    <i class="bi bi-shield-exclamation"></i> Permanent Deletion Warning
                </h4>
                <p class="mb-0">
                    You are about to permanently delete this garden. This action <strong>cannot be undone</strong>. 
                    All associated plants, records, journal entries, and equipment will also be removed.
                </p>
            </div>
        </div>
    </div>

    <!-- Garden Information Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-house-door"></i> Garden to be Deleted</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <!-- Garden Image -->
                @if (ViewData["GardenImage"] != null && !string.IsNullOrEmpty(ViewData["GardenImage"]!.ToString()))
                {
                    <div class="col-md-4 text-center">
                        <img src="@ViewData["GardenImage"]" alt="@Model.GardenName" class="img-fluid rounded shadow" style="max-height: 300px; object-fit: cover;" />
                    </div>
                    <div class="col-md-8">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Garden Name:</dt>
                            <dd class="col-sm-8"><h5 class="mb-0">@Model.GardenName</h5></dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.GardenDescription</dd>

                            <dt class="col-sm-4">Location:</dt>
                            <dd class="col-sm-8"><span class="badge bg-info fs-6">@Model.GardenLocation</span></dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8"><span class="badge bg-success fs-6">@Model.Type</span></dd>

                            <dt class="col-sm-4">Grow Method:</dt>
                            <dd class="col-sm-8"><span class="badge bg-primary fs-6">@Model.GardenGrowMethod</span></dd>

                            <dt class="col-sm-4">Duration:</dt>
                            <dd class="col-sm-8">
                                <i class="bi bi-calendar-range"></i> @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()
                            </dd>
                        </dl>
                    </div>
                }
                else
                {
                    <div class="col-12">
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Garden Name:</dt>
                            <dd class="col-sm-9"><h5 class="mb-0">@Model.GardenName</h5></dd>

                            <dt class="col-sm-3">Description:</dt>
                            <dd class="col-sm-9">@Model.GardenDescription</dd>

                            <dt class="col-sm-3">Location:</dt>
                            <dd class="col-sm-9"><span class="badge bg-info fs-6">@Model.GardenLocation</span></dd>

                            <dt class="col-sm-3">Type:</dt>
                            <dd class="col-sm-9"><span class="badge bg-success fs-6">@Model.Type</span></dd>

                            <dt class="col-sm-3">Grow Method:</dt>
                            <dd class="col-sm-9"><span class="badge bg-primary fs-6">@Model.GardenGrowMethod</span></dd>

                            <dt class="col-sm-3">Duration:</dt>
                            <dd class="col-sm-9">
                                <i class="bi bi-calendar-range"></i> @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()
                            </dd>
                        </dl>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Impact Summary Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Deletion Impact</h3>
        </div>
        <div class="card-body">
            <p class="mb-3">Deleting this garden will also remove:</p>
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="card bg-light text-center">
                        <div class="card-body">
                            <i class="bi bi-flower3 text-success fs-2"></i>
                            <h4 class="mt-2 mb-0">@Model.Plants.Count</h4>
                            <small class="text-muted">Plants</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light text-center">
                        <div class="card-body">
                            <i class="bi bi-clipboard-data text-info fs-2"></i>
                            <h4 class="mt-2 mb-0">@Model.DailyRecords.Count</h4>
                            <small class="text-muted">Daily Records</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light text-center">
                        <div class="card-body">
                            <i class="bi bi-journal-text text-warning fs-2"></i>
                            <h4 class="mt-2 mb-0">@Model.JournalEntries.Count</h4>
                            <small class="text-muted">Journal Entries</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light text-center">
                        <div class="card-body">
                            <i class="bi bi-tools text-danger fs-2"></i>
                            <h4 class="mt-2 mb-0">@Model.Equipments.Count</h4>
                            <small class="text-muted">Equipment</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Card -->
    <form asp-action="Delete">
        <input type="hidden" name="GardenId" value="@Model.GardenId" />
        
        <div class="card shadow border-danger">
            <div class="card-body text-center">
                <h4 class="mb-4">
                    <i class="bi bi-question-circle text-danger"></i> 
                    Are you absolutely sure you want to delete "<strong>@Model.GardenName</strong>"?
                </h4>
                
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('This will permanently delete the garden and all related data. Are you sure?')">
                        <i class="bi bi-trash"></i> Yes, Delete Permanently
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.GardenId" class="btn btn-info btn-lg">
                        <i class="bi bi-eye"></i> Review Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel, Keep Garden
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
