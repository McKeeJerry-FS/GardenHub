@model GardenHub.Models.Reminder

@{
    ViewData["Title"] = "Reminder Details";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0 bg-gradient" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="card-body text-center text-white py-4">
                    <h1 class="display-5 fw-bold mb-2">
                        <i class="bi bi-info-circle"></i> Reminder Details
                    </h1>
                    <p class="lead mb-0">View complete reminder information</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Main Info Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-alarm"></i> @Model.Title
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Status Banner -->
                    <div class="alert @(Model.IsCompleted ? "alert-success" : Model.IsOverdue ? "alert-danger" : Model.IsDueToday ? "alert-warning" : "alert-info")" role="alert">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                @if (Model.IsCompleted)
                                {
                                    <h4><i class="bi bi-check-circle-fill"></i> Completed</h4>
                                    <p class="mb-0">This reminder was completed on @Model.CompletedDate?.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                }
                                else if (Model.IsOverdue)
                                {
                                    <h4><i class="bi bi-exclamation-triangle-fill"></i> Overdue!</h4>
                                    <p class="mb-0">This reminder was due on @Model.ReminderDateTime.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                }
                                else if (Model.IsDueToday)
                                {
                                    <h4><i class="bi bi-calendar-event-fill"></i> Due Today!</h4>
                                    <p class="mb-0">This reminder is due today at @Model.ReminderDateTime.ToLocalTime().ToString("h:mm tt")</p>
                                }
                                else
                                {
                                    <h4><i class="bi bi-clock-fill"></i> Scheduled</h4>
                                    <p class="mb-0">This reminder is scheduled for @Model.ReminderDateTime.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                }
                            </div>
                            @if (!Model.IsCompleted)
                            {
                                <form asp-action="Complete" asp-route-id="@Model.ReminderId" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="bi bi-check-circle"></i> Mark Complete
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted">Description:</h5>
                            <p class="lead">@Model.Description</p>
                        </div>
                    }

                    <!-- Details Grid -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card bg-light h-100">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-tag"></i> Type
                                    </h6>
                                    <p class="h5 mb-0">
                                        <span class="badge bg-info">@Model.ReminderType</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light h-100">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-flag"></i> Priority
                                    </h6>
                                    <p class="h5 mb-0">
                                        <span class="badge @(Model.Priority switch {
                                            GardenHub.Models.Enums.ReminderPriority.Urgent => "bg-danger",
                                            GardenHub.Models.Enums.ReminderPriority.High => "bg-warning text-dark",
                                            GardenHub.Models.Enums.ReminderPriority.Low => "bg-secondary",
                                            _ => "bg-primary"
                                        })">@Model.Priority</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light h-100">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-calendar3"></i> Due Date
                                    </h6>
                                    <p class="h5 mb-0">@Model.ReminderDateTime.ToLocalTime().ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light h-100">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">
                                        <i class="bi bi-clock"></i> Due Time
                                    </h6>
                                    <p class="h5 mb-0">@Model.ReminderDateTime.ToLocalTime().ToString("h:mm tt")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recurring Info -->
                    @if (Model.IsRecurring)
                    {
                        <div class="card bg-purple text-white mt-3">
                            <div class="card-body">
                                <h5 class="mb-2">
                                    <i class="bi bi-arrow-repeat"></i> Recurring Reminder
                                </h5>
                                <p class="mb-0">
                                    <strong>Pattern:</strong> @Model.RecurrencePattern
                                    @if (Model.RecurrenceInterval.HasValue && Model.RecurrenceInterval.Value > 1)
                                    {
                                        <span>(Every @Model.RecurrenceInterval.Value intervals)</span>
                                    }
                                </p>
                            </div>
                        </div>
                    }

                    <!-- Linked Items -->
                    @if (Model.Garden != null || Model.DailyRecord != null || Model.GardenCareActivity != null)
                    {
                        <div class="card mt-3">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-link-45deg"></i> Linked Items
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    @if (Model.Garden != null)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <i class="bi bi-house-door text-success"></i> Garden
                                                    </h6>
                                                    <p class="mb-0">@Model.Garden.GardenName</p>
                                                </div>
                                                <a asp-controller="Gardens" asp-action="Details" asp-route-id="@Model.GardenId" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.DailyRecord != null)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <i class="bi bi-clipboard-data text-info"></i> Daily Record
                                                    </h6>
                                                    <p class="mb-0">@Model.DailyRecord.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy")</p>
                                                </div>
                                                <a asp-controller="DailyRecords" asp-action="Details" asp-route-id="@Model.DailyRecordId" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.GardenCareActivity != null)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <i class="bi bi-clipboard-heart text-warning"></i> Garden Care Activity
                                                    </h6>
                                                    <p class="mb-0">@Model.GardenCareActivity.ActivityType</p>
                                                </div>
                                                <a asp-controller="GardenCareActivities" asp-action="Details" asp-route-id="@Model.GardenCareActivityId" class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Metadata -->
                    <div class="card bg-light mt-3">
                        <div class="card-body">
                            <small class="text-muted">
                                <i class="bi bi-calendar-plus"></i> <strong>Created:</strong> @Model.CreatedDate.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                                @if (Model.LastModifiedDate.HasValue)
                                {
                                    <br />
                                    <i class="bi bi-pencil"></i> <strong>Last Modified:</strong> @Model.LastModifiedDate.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mb-4">
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div class="btn-group">
                    @if (!Model.IsCompleted)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.ReminderId" class="btn btn-warning btn-lg">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <button type="button" class="btn btn-info btn-lg" data-bs-toggle="modal" data-bs-target="#snoozeModal">
                            <i class="bi bi-clock-history"></i> Snooze
                        </button>
                    }
                    <a asp-action="Delete" asp-route-id="@Model.ReminderId" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Snooze Modal -->
<div class="modal fade" id="snoozeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-clock-history"></i> Snooze Reminder
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>How long would you like to snooze this reminder?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Snooze" asp-route-id="@Model.ReminderId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="hours" value="1" />
                    <button type="submit" class="btn btn-secondary">1 Hour</button>
                </form>
                <form asp-action="Snooze" asp-route-id="@Model.ReminderId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="hours" value="3" />
                    <button type="submit" class="btn btn-secondary">3 Hours</button>
                </form>
                <form asp-action="Snooze" asp-route-id="@Model.ReminderId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="hours" value="24" />
                    <button type="submit" class="btn btn-secondary">1 Day</button>
                </form>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
        }
    </style>
}
