@model GardenHub.Models.Equipment

@{
    ViewData["Title"] = "Delete Equipment";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-exclamation-triangle text-danger"></i> Delete Equipment</h1>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.EquipmentId" class="btn btn-info">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger shadow mb-4" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-octagon-fill fs-1 me-3"></i>
            <div>
                <h4 class="alert-heading mb-2">
                    <i class="bi bi-shield-exclamation"></i> Permanent Deletion Warning
                </h4>
                <p class="mb-0">
                    You are about to permanently delete this equipment. This action <strong>cannot be undone</strong>.
                </p>
            </div>
        </div>
    </div>

    <!-- Equipment Information Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-tools"></i> Equipment to be Deleted</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <!-- Equipment Image -->
                @if (ViewData["EquipmentImage"] != null && !string.IsNullOrEmpty(ViewData["EquipmentImage"]!.ToString()))
                {
                    <div class="col-md-4 text-center">
                        <img src="@ViewData["EquipmentImage"]" alt="@Model.EquipmentName" class="img-fluid rounded shadow" style="max-height: 300px; object-fit: cover;" />
                    </div>
                    <div class="col-md-8">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Equipment Name:</dt>
                            <dd class="col-sm-8"><h5 class="mb-0">@Model.EquipmentName</h5></dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.EquipmentDescription</dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8"><span class="badge bg-danger fs-6">@Model.EquipmentType</span></dd>

                            <dt class="col-sm-4">Purchase Price:</dt>
                            <dd class="col-sm-8"><span class="fs-5 text-success">$@Model.PurchasePrice.ToString("N2")</span></dd>

                            <dt class="col-sm-4">Purchase Date:</dt>
                            <dd class="col-sm-8">
                                <i class="bi bi-calendar-check"></i> @Model.PurchaseDate.ToShortDateString()
                                <small class="text-muted">(@((DateTime.UtcNow - Model.PurchaseDate).Days) days ago)</small>
                            </dd>

                            <dt class="col-sm-4">Last Maintenance:</dt>
                            <dd class="col-sm-8">
                                <i class="bi bi-wrench"></i> @Model.LastMaintenanceDate.ToShortDateString()
                                <small class="text-muted">(@((DateTime.UtcNow - Model.LastMaintenanceDate).Days) days ago)</small>
                            </dd>

                            <dt class="col-sm-4">Garden:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Garden != null)
                                {
                                    <span class="badge bg-primary fs-6">@Model.Garden.GardenName</span>
                                }
                                else
                                {
                                    <span class="text-muted">No garden assigned</span>
                                }
                            </dd>
                        </dl>
                    </div>
                }
                else
                {
                    <div class="col-12">
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Equipment Name:</dt>
                            <dd class="col-sm-9"><h5 class="mb-0">@Model.EquipmentName</h5></dd>

                            <dt class="col-sm-3">Description:</dt>
                            <dd class="col-sm-9">@Model.EquipmentDescription</dd>

                            <dt class="col-sm-3">Type:</dt>
                            <dd class="col-sm-9"><span class="badge bg-danger fs-6">@Model.EquipmentType</span></dd>

                            <dt class="col-sm-3">Purchase Price:</dt>
                            <dd class="col-sm-9"><span class="fs-5 text-success">$@Model.PurchasePrice.ToString("N2")</span></dd>

                            <dt class="col-sm-3">Purchase Date:</dt>
                            <dd class="col-sm-9">
                                <i class="bi bi-calendar-check"></i> @Model.PurchaseDate.ToShortDateString()
                                <small class="text-muted">(@((DateTime.UtcNow - Model.PurchaseDate).Days) days ago)</small>
                            </dd>

                            <dt class="col-sm-3">Last Maintenance:</dt>
                            <dd class="col-sm-9">
                                <i class="bi bi-wrench"></i> @Model.LastMaintenanceDate.ToShortDateString()
                                <small class="text-muted">(@((DateTime.UtcNow - Model.LastMaintenanceDate).Days) days ago)</small>
                            </dd>

                            <dt class="col-sm-3">Garden:</dt>
                            <dd class="col-sm-9">
                                @if (Model.Garden != null)
                                {
                                    <span class="badge bg-primary fs-6">@Model.Garden.GardenName</span>
                                }
                                else
                                {
                                    <span class="text-muted">No garden assigned</span>
                                }
                            </dd>
                        </dl>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Confirmation Card -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="EquipmentId" />
        
        <div class="card shadow border-danger">
            <div class="card-body text-center">
                <h4 class="mb-4">
                    <i class="bi bi-question-circle text-danger"></i> 
                    Are you absolutely sure you want to delete "<strong>@Model.EquipmentName</strong>"?
                </h4>
                
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('This will permanently delete this equipment. Are you sure?')">
                        <i class="bi bi-trash"></i> Yes, Delete Permanently
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.EquipmentId" class="btn btn-info btn-lg">
                        <i class="bi bi-eye"></i> Review Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel, Keep Equipment
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
