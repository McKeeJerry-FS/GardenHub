@model GardenHub.Models.DailyRecord

@{
    ViewData["Title"] = "Daily Record Details";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-clipboard-data"></i> Daily Record</h1>
        <div class="d-flex gap-2">
            <button onclick="printRecordSummary()" class="btn btn-primary no-print">
                <i class="bi bi-printer"></i> Print Summary
            </button>
            <a asp-action="Edit" asp-route-id="@Model?.RecordId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Record
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Print-Only Summary View -->
    <div id="printSummary" class="print-only">
        <div class="print-header">
            <h1>Daily Record</h1>
            <p class="print-date">Record Date: @Model.CreatedDate.ToString("MMMM dd, yyyy h:mm tt")</p>
            <p class="print-date">Printed on: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>

        @if (Model.Garden != null)
        {
            <div class="print-section">
                <h2>Garden Information</h2>
                <table class="print-table">
                    <tr>
                        <th>Garden:</th>
                        <td>@Model.Garden.GardenDescription</td>
                    </tr>
                </table>
            </div>
        }

        <div class="print-section">
            <h2>Environmental Conditions</h2>
            <table class="print-table">
                <tr>
                    <th colspan="2" style="background-color: #e9ecef;">Inside Conditions</th>
                </tr>
                <tr>
                    <th>Temperature:</th>
                    <td>@Model.InsideTemperature°F</td>
                </tr>
                <tr>
                    <th>Humidity:</th>
                    <td>@Model.InsideHumidity%</td>
                </tr>
                <tr>
                    <th>VPD:</th>
                    <td>@Model.InsideVPD kPa</td>
                </tr>
                <tr>
                    <th colspan="2" style="background-color: #e9ecef;">Outside Conditions</th>
                </tr>
                <tr>
                    <th>Temperature:</th>
                    <td>@Model.OutsideTemperature°F</td>
                </tr>
                <tr>
                    <th>Humidity:</th>
                    <td>@Model.OutsideHumidity%</td>
                </tr>
                <tr>
                    <th>VPD:</th>
                    <td>@Model.OutsideVPD kPa</td>
                </tr>
            </table>
        </div>

        <div class="print-section">
            <h2>Lighting & Care</h2>
            <table class="print-table">
                <tr>
                    <th>Lights On:</th>
                    <td>@Model.LightingOn</td>
                </tr>
                <tr>
                    <th>Lights Off:</th>
                    <td>@Model.LightingOff</td>
                </tr>
                <tr>
                    <th>Intensity:</th>
                    <td>@Model.LightingIntensity%</td>
                </tr>
                <tr>
                    <th>Water Amount:</th>
                    <td>@Model.WaterAmount</td>
                </tr>
                <tr>
                    <th>Nutrient Amount:</th>
                    <td>@Model.NutrientAmount</td>
                </tr>
            </table>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <div class="print-section">
                <h2>Notes</h2>
                <div style="padding: 15px; background-color: #f9f9f9; border: 1px solid #ddd;">@Model.Notes</div>
            </div>
        }
    </div>

    <!-- Record Header Card -->
    <div class="card mb-4 shadow no-print">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Record Information</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3"><i class="bi bi-calendar3"></i> Date & Time</h5>
                    <p class="fs-4 mb-0">@Model.CreatedDate.ToString("MMMM dd, yyyy h:mm tt")</p>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3"><i class="bi bi-house-door"></i> Garden</h5>
                    @if (Model.Garden != null)
                    {
                        <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-outline-primary">
                            <i class="bi bi-speedometer2"></i> @Model.Garden.GardenDescription
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">No garden assigned</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Environmental Conditions Card -->
    <div class="card mb-4 shadow no-print">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-thermometer-half"></i> Environmental Conditions</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Inside Conditions -->
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-house-door"></i> Inside Conditions</h5>
                    <div class="row g-2">
                        <div class="col-sm-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-thermometer text-danger fs-3"></i>
                                    <h4 class="mb-0 mt-2">@Model.InsideTemperature°F</h4>
                                    <small class="text-muted">Temperature</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-droplet text-primary fs-3"></i>
                                    <h4 class="mb-0 mt-2">@Model.InsideHumidity%</h4>
                                    <small class="text-muted">Humidity</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-activity text-warning fs-3"></i>
                                    <h4 class="mb-0 mt-2">@Model.InsideVPD kPa</h4>
                                    <small class="text-muted">Vapor Pressure Deficit</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Outside Conditions -->
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-cloud-sun"></i> Outside Conditions</h5>
                    <div class="row g-2">
                        <div class="col-sm-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-thermometer text-danger fs-3"></i>
                                    <h4 class="mb-0 mt-2">@Model.OutsideTemperature°F</h4>
                                    <small class="text-muted">Temperature</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-droplet text-primary fs-3"></i>
                                    <h4 class="mb-0 mt-2">@Model.OutsideHumidity%</h4>
                                    <small class="text-muted">Humidity</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-activity text-warning fs-3"></i>
                                    <h4 class="mb-0 mt-2">@Model.OutsideVPD kPa</h4>
                                    <small class="text-muted">Vapor Pressure Deficit</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lighting Information Card -->
    <div class="card mb-4 shadow no-print">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-brightness-high"></i> Lighting Information</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-sunrise text-warning" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-3 mb-2">Lights On</h5>
                            <p class="fs-4 mb-0">@Model.LightingOn</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-sunset text-warning" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-3 mb-2">Lights Off</h5>
                            <p class="fs-4 mb-0">@Model.LightingOff</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-brightness-high text-warning" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-3 mb-2">Intensity</h5>
                            <p class="fs-4 mb-0">@Model.LightingIntensity%</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Care Information Card -->
    <div class="card mb-4 shadow no-print">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-droplet-fill"></i> Water & Nutrients</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-droplet-fill text-info" style="font-size: 3rem;"></i>
                            <h5 class="mt-3 mb-2">Water Amount</h5>
                            <p class="fs-4 mb-0">@Model.WaterAmount</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card bg-light h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-moisture text-success" style="font-size: 3rem;"></i>
                            <h5 class="mt-3 mb-2">Nutrient Amount</h5>
                            <p class="fs-4 mb-0">@Model.NutrientAmount</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Notes Card -->
    @if (!string.IsNullOrWhiteSpace(Model.Notes))
    {
        <div class="card mb-4 shadow no-print">
            <div class="card-header bg-secondary text-white">
                <h3 class="mb-0"><i class="bi bi-sticky"></i> Notes</h3>
            </div>
            <div class="card-body">
                <p class="fs-5 mb-0">@Model.Notes</p>
            </div>
        </div>
    }

    <!-- Quick Actions Card -->
    <div class="card shadow no-print">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h3>
        </div>
        <div class="card-body">
            <div class="d-flex gap-2 flex-wrap justify-content-center">
                <a asp-action="Edit" asp-route-id="@Model?.RecordId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Record
                </a>
                @if (Model.Garden != null)
                {
                    <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Go to Garden
                    </a>
                    <a asp-action="Create" asp-route-gardenId="@Model.Garden.GardenId" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add New Record
                    </a>
                }
                <a asp-action="Dashboard" class="btn btn-info">
                    <i class="bi bi-graph-up"></i> View Dashboard
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> View All Records
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function printRecordSummary() {
            window.print();
        }
    </script>
}

<style>
    @@media print {
        .no-print {
            display: none !important;
        }

        .print-only {
            display: block !important;
        }

        body {
            background: white;
            margin: 0;
            padding: 20px;
        }

        .print-header {
            text-align: center;
            border-bottom: 3px solid #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

            .print-header h1 {
                font-size: 32px;
                margin: 0 0 10px 0;
                color: #333;
            }

        .print-date {
            color: #666;
            font-size: 14px;
            margin: 5px 0;
        }

        .print-section {
            margin-bottom: 30px;
            page-break-inside: avoid;
        }

            .print-section h2 {
                font-size: 20px;
                color: #333;
                border-bottom: 2px solid #666;
                padding-bottom: 8px;
                margin-bottom: 15px;
            }

        .print-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .print-table th {
                text-align: left;
                padding: 10px;
                background-color: #f5f5f5;
                border: 1px solid #ddd;
                width: 35%;
                font-weight: 600;
            }

            .print-table td {
                padding: 10px;
                border: 1px solid #ddd;
            }

        .card,
        .shadow,
        .shadow-sm {
            box-shadow: none !important;
        }
    }

    @@media screen {
        .print-only {
            display: none;
        }

        .no-print {
            display: block;
        }
    }
</style>