@model GardenHub.Models.DailyRecord

@{
    ViewData["Title"] = "Delete Daily Record";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-exclamation-triangle text-danger"></i> Delete Daily Record</h1>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.RecordId" class="btn btn-info">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger shadow mb-4" role="alert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-octagon-fill fs-1 me-3"></i>
            <div>
                <h4 class="alert-heading mb-2">
                    <i class="bi bi-shield-exclamation"></i> Permanent Deletion Warning
                </h4>
                <p class="mb-0">
                    You are about to permanently delete this daily record. This action <strong>cannot be undone</strong>.
                    All environmental data for this date will be lost.
                </p>
            </div>
        </div>
    </div>

    <!-- Record Information Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-clipboard-data"></i> Record to be Deleted</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5><i class="bi bi-calendar3"></i> Date & Time</h5>
                    <p class="fs-4">@Model.CreatedDate.ToString("MMMM dd, yyyy h:mm tt")</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="bi bi-house-door"></i> Garden</h5>
                    @if (Model.Garden != null)
                    {
                        <p class="fs-4">@Model.Garden.GardenDescription</p>
                    }
                    else
                    {
                        <p class="text-muted">No garden assigned</p>
                    }
                </div>
            </div>

            <hr />

            <div class="row g-3">
                <div class="col-md-6">
                    <h6 class="border-bottom pb-2"><i class="bi bi-house-door"></i> Inside Conditions</h6>
                    <div class="row g-2">
                        <div class="col-6">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <small class="text-muted">Temperature</small>
                                    <h5 class="mb-0">@Model.InsideTemperature°F</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <small class="text-muted">Humidity</small>
                                    <h5 class="mb-0">@Model.InsideHumidity%</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <small class="text-muted">VPD</small>
                                    <h5 class="mb-0">@Model.InsideVPD kPa</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <h6 class="border-bottom pb-2"><i class="bi bi-cloud-sun"></i> Outside Conditions</h6>
                    <div class="row g-2">
                        <div class="col-6">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <small class="text-muted">Temperature</small>
                                    <h5 class="mb-0">@Model.OutsideTemperature°F</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <small class="text-muted">Humidity</small>
                                    <h5 class="mb-0">@Model.OutsideHumidity%</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <small class="text-muted">VPD</small>
                                    <h5 class="mb-0">@Model.OutsideVPD kPa</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr />

            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <small class="text-muted">Lighting</small>
                            <h6 class="mb-0">@Model.LightingOn - @Model.LightingOff</h6>
                            <small>@Model.LightingIntensity% Intensity</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <small class="text-muted">Water</small>
                            <h6 class="mb-0">@Model.WaterAmount</h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <small class="text-muted">Nutrients</small>
                            <h6 class="mb-0">@Model.NutrientAmount</h6>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Notes))
            {
                <hr />
                <div>
                    <h6><i class="bi bi-sticky"></i> Notes:</h6>
                    <p class="text-muted">@Model.Notes</p>
                </div>
            }
        </div>
    </div>

    <!-- Confirmation Card -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="RecordId" />
        
        <div class="card shadow border-danger">
            <div class="card-body text-center">
                <h4 class="mb-4">
                    <i class="bi bi-question-circle text-danger"></i> 
                    Are you absolutely sure you want to delete this record?
                </h4>
                
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('This will permanently delete this record. Are you sure?')">
                        <i class="bi bi-trash"></i> Yes, Delete Permanently
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.RecordId" class="btn btn-info btn-lg">
                        <i class="bi bi-eye"></i> Review Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel, Keep Record
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
