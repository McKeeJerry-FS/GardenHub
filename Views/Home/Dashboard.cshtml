@model GardenHub.Models.ViewModels.DashboardViewModel
@using GardenHub.Models.Enums

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Floating Quick Add Button -->
    <button type="button" class="btn btn-primary btn-lg rounded-circle position-fixed shadow-lg" 
            style="bottom: 20px; right: 20px; z-index: 1000; width: 60px; height: 60px;"
            data-bs-toggle="modal" data-bs-target="#quickAddReminderModal"
            title="Quick Add Reminder">
        <i class="bi bi-bell-fill fs-4"></i>
    </button>

    <div class="mb-4">
        <h1 class="display-4"><i class="bi bi-speedometer2"></i> Dashboard</h1>
        <p class="lead">Welcome to your GardenHub dashboard - Your complete garden management overview</p>
    </div>

    <!-- Equipment Maintenance Notifications -->
    @if (Model.EquipmentUnderMaintenance.Any() || Model.EquipmentMaintenanceRequested.Any())
    {
        <div class="card mb-4 shadow border-warning">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">
                    <i class="bi bi-exclamation-triangle-fill"></i> Equipment Maintenance Alerts
                </h3>
            </div>
            <div class="card-body">
                <!-- Status Summary Cards in Single Row -->
                <div class="row g-2 mb-3">
                    <div class="col-md-4">
                        <div class="card bg-danger text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-tools" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.EquipmentUnderMaintenance.Count</h4>
                                <p class="mb-0 small">Under Maintenance</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-warning text-dark h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-exclamation-triangle" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.EquipmentMaintenanceRequested.Count</h4>
                                <p class="mb-0 small">Maintenance Requested</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.OperationalEquipmentCount</h4>
                                <p class="mb-0 small">Operational</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.EquipmentUnderMaintenance.Any())
                {
                    <div class="alert alert-danger mb-3">
                        <h5 class="alert-heading">
                            <i class="bi bi-tools"></i> Equipment Under Maintenance
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var equipment in Model.EquipmentUnderMaintenance)
                            {
                                var activeRecord = equipment.MaintenanceRecords?
                                    .FirstOrDefault(mr => mr.Status == MaintenanceStatus.UnderMaintenance);
                                var downtime = activeRecord?.MaintenanceStartDate.HasValue == true 
                                    ? DateTime.UtcNow - activeRecord.MaintenanceStartDate.Value 
                                    : TimeSpan.Zero;

                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start mb-2">
                                            @if (ViewData[$"EquipmentImage_{equipment.EquipmentId}"] != null)
                                            {
                                                <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" 
                                                     alt="@equipment.EquipmentName" 
                                                     class="rounded me-2" 
                                                     style="width: 60px; height: 60px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="bi bi-tools text-white fs-4"></i>
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0"><strong>@equipment.EquipmentName</strong></h6>
                                                <p class="mb-0 small text-muted">@equipment.EquipmentType</p>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-info">
                                                <i class="bi bi-house-door"></i> @equipment.Garden?.GardenName
                                            </span>
                                        </div>
                                        <p class="mb-1 small">
                                            <i class="bi bi-clock text-danger"></i> 
                                            <strong>Downtime:</strong> 
                                            @if (downtime.Days > 0)
                                            {
                                                <text>@downtime.Days day(s) </text>
                                            }
                                            @downtime.Hours hour(s) @downtime.Minutes min
                                        </p>
                                        @if (activeRecord != null)
                                        {
                                            <p class="mb-2 small">
                                                <strong>Started:</strong> @activeRecord.MaintenanceStartDate?.ToString("MMM dd, h:mm tt")
                                            </p>
                                        }
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" 
                                               class="btn btn-sm btn-outline-danger flex-fill">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            @if (equipment.Garden != null)
                                            {
                                                <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@equipment.Garden.GardenId" 
                                                   class="btn btn-sm btn-outline-primary flex-fill">
                                                    <i class="bi bi-house-door"></i> Garden
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.EquipmentMaintenanceRequested.Any())
                {
                    <div class="alert alert-warning mb-0">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i> Maintenance Requested
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var equipment in Model.EquipmentMaintenanceRequested)
                            {
                                var activeRecord = equipment.MaintenanceRecords?
                                    .FirstOrDefault(mr => mr.Status == MaintenanceStatus.MaintenanceRequested);
                                var daysAgo = activeRecord != null 
                                    ? (DateTime.UtcNow - activeRecord.RequestDate).Days 
                                    : 0;

                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start mb-2">
                                            @if (ViewData[$"EquipmentImage_{equipment.EquipmentId}"] != null)
                                            {
                                                <img src="@ViewData[$"EquipmentImage_{equipment.EquipmentId}"]" 
                                                     alt="@equipment.EquipmentName" 
                                                     class="rounded me-2" 
                                                     style="width: 60px; height: 60px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="bi bi-tools text-white fs-4"></i>
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0"><strong>@equipment.EquipmentName</strong></h6>
                                                <p class="mb-0 small text-muted">@equipment.EquipmentType</p>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-info">
                                                <i class="bi bi-house-door"></i> @equipment.Garden?.GardenName
                                            </span>
                                        </div>
                                        @if (activeRecord != null)
                                        {
                                            <p class="mb-1 small">
                                                <i class="bi bi-calendar-event text-warning"></i> 
                                                <strong>Requested:</strong> @daysAgo day(s) ago
                                            </p>
                                            @if (!string.IsNullOrWhiteSpace(activeRecord.Notes))
                                            {
                                                <p class="mb-2 small text-muted" style="
                                                    display: -webkit-box;
                                                    -webkit-line-clamp: 2;
                                                    -webkit-box-orient: vertical;
                                                    overflow: hidden;
                                                    text-overflow: ellipsis;">
                                                    <strong>Notes:</strong> @activeRecord.Notes
                                                </p>
                                            }
                                        }
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Equipments" asp-action="Details" asp-route-id="@equipment.EquipmentId" 
                                               class="btn btn-sm btn-outline-warning flex-fill">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            @if (equipment.Garden != null)
                                            {
                                                <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@equipment.Garden.GardenId" 
                                                   class="btn btn-sm btn-outline-primary flex-fill">
                                                    <i class="bi bi-house-door"></i> Garden
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Reminder Notifications -->
    @if (Model.OverdueReminders.Any() || Model.TodayReminders.Any() || Model.UpcomingReminders.Any())
    {
        <div class="card mb-4 shadow border-primary">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="bi bi-bell-fill"></i> Reminder Alerts
                </h3>
            </div>
            <div class="card-body">
                <!-- Status Summary Cards in Single Row -->
                <div class="row g-2 mb-3">
                    <div class="col-md-3">
                        <div class="card bg-danger text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-exclamation-octagon" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.OverdueReminders.Count</h4>
                                <p class="mb-0 small">Overdue</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-dark h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-calendar-check" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.TodayReminders.Count</h4>
                                <p class="mb-0 small">Due Today</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-clock-history" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.UpcomingReminders.Count</h4>
                                <p class="mb-0 small">Upcoming (24h)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white h-100">
                            <div class="card-body text-center py-3">
                                <i class="bi bi-list-check" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-0">@Model.TotalActiveReminders</h4>
                                <p class="mb-0 small">Total Active</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.OverdueReminders.Any())
                {
                    <div class="alert alert-danger mb-3">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-octagon"></i> Overdue Reminders
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var reminder in Model.OverdueReminders)
                            {
                                var overdueDays = (DateTime.UtcNow - reminder.ReminderDateTime).Days;
                                var overdueHours = (DateTime.UtcNow - reminder.ReminderDateTime).Hours;

                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0"><strong>@reminder.Title</strong></h6>
                                            <span class="badge bg-@(reminder.Priority == ReminderPriority.High ? "danger" : reminder.Priority == ReminderPriority.Normal ? "warning" : "secondary") small">
                                                @reminder.Priority
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-tag"></i> @reminder.ReminderType
                                            </span>
                                            @if (reminder.Garden != null)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-house-door"></i> @reminder.Garden.GardenName
                                                </span>
                                            }
                                            @if (reminder.IsRecurring)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-arrow-repeat"></i> Recurring
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(reminder.Description))
                                        {
                                            <p class="mb-2 small text-muted" style="
                                                display: -webkit-box;
                                                -webkit-line-clamp: 2;
                                                -webkit-box-orient: vertical;
                                                overflow: hidden;
                                                text-overflow: ellipsis;">
                                                @reminder.Description
                                            </p>
                                        }
                                        <p class="mb-1 small">
                                            <i class="bi bi-clock text-danger"></i> 
                                            <strong>Overdue:</strong> 
                                            @if (overdueDays > 0)
                                            {
                                                <text>@overdueDays day(s) </text>
                                            }
                                            else
                                            {
                                                <text>@overdueHours hour(s)</text>
                                            }
                                        </p>
                                        <p class="mb-2 small">
                                            <strong>Was due:</strong> @reminder.ReminderDateTime.ToString("MMM dd, h:mm tt")
                                        </p>
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Reminders" asp-action="Details" asp-route-id="@reminder.ReminderId" 
                                               class="btn btn-sm btn-outline-danger flex-fill">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <form asp-controller="Reminders" asp-action="MarkAsCompleted" asp-route-id="@reminder.ReminderId" method="post" class="flex-fill">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success w-100">
                                                    <i class="bi bi-check-circle"></i> Complete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.TodayReminders.Any())
                {
                    <div class="alert alert-warning mb-3">
                        <h5 class="alert-heading">
                            <i class="bi bi-calendar-check"></i> Due Today
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var reminder in Model.TodayReminders)
                            {
                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0"><strong>@reminder.Title</strong></h6>
                                            <span class="badge bg-@(reminder.Priority == ReminderPriority.High ? "danger" : reminder.Priority == ReminderPriority.Normal ? "warning" : "secondary") small">
                                                @reminder.Priority
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-tag"></i> @reminder.ReminderType
                                            </span>
                                            @if (reminder.Garden != null)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-house-door"></i> @reminder.Garden.GardenName
                                                </span>
                                            }
                                            @if (reminder.IsRecurring)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-arrow-repeat"></i> Recurring
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(reminder.Description))
                                        {
                                            <p class="mb-2 small text-muted" style="
                                                display: -webkit-box;
                                                -webkit-line-clamp: 2;
                                                -webkit-box-orient: vertical;
                                                overflow: hidden;
                                                text-overflow: ellipsis;">
                                                @reminder.Description
                                            </p>
                                        }
                                        <p class="mb-2 small">
                                            <i class="bi bi-clock text-warning"></i> 
                                            <strong>Due:</strong> @reminder.ReminderDateTime.ToString("h:mm tt")
                                        </p>
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Reminders" asp-action="Details" asp-route-id="@reminder.ReminderId" 
                                               class="btn btn-sm btn-outline-warning flex-fill">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <form asp-controller="Reminders" asp-action="MarkAsCompleted" asp-route-id="@reminder.ReminderId" method="post" class="flex-fill">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success w-100">
                                                    <i class="bi bi-check-circle"></i> Complete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.UpcomingReminders.Any())
                {
                    <div class="alert alert-info mb-0">
                        <h5 class="alert-heading">
                            <i class="bi bi-clock-history"></i> Upcoming (Next 24 Hours)
                        </h5>
                        <hr />
                        <!-- Horizontal Scrolling Container -->
                        <div class="d-flex overflow-auto pb-2" style="gap: 1rem;">
                            @foreach (var reminder in Model.UpcomingReminders)
                            {
                                var hoursUntil = (reminder.ReminderDateTime - DateTime.UtcNow).Hours;

                                <div class="card bg-light flex-shrink-0" style="width: 320px;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0"><strong>@reminder.Title</strong></h6>
                                            <span class="badge bg-@(reminder.Priority == ReminderPriority.High ? "danger" : reminder.Priority == ReminderPriority.Normal ? "warning" : "secondary") small">
                                                @reminder.Priority
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-tag"></i> @reminder.ReminderType
                                            </span>
                                            @if (reminder.Garden != null)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-house-door"></i> @reminder.Garden.GardenName
                                                </span>
                                            }
                                            @if (reminder.IsRecurring)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-arrow-repeat"></i> Recurring
                                                </span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(reminder.Description))
                                        {
                                            <p class="mb-2 small text-muted" style="
                                                display: -webkit-box;
                                                -webkit-line-clamp: 2;
                                                -webkit-box-orient: vertical;
                                                overflow: hidden;
                                                text-overflow: ellipsis;">
                                                @reminder.Description
                                            </p>
                                        }
                                        <p class="mb-1 small">
                                            <i class="bi bi-clock-history text-info"></i> 
                                            <strong>In:</strong> @hoursUntil hour(s)
                                        </p>
                                        <p class="mb-2 small">
                                            <strong>Due:</strong> @reminder.ReminderDateTime.ToString("MMM dd, h:mm tt")
                                        </p>
                                        <div class="d-flex gap-1">
                                            <a asp-controller="Reminders" asp-action="Details" asp-route-id="@reminder.ReminderId" 
                                               class="btn btn-sm btn-outline-info flex-fill">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <form asp-controller="Reminders" asp-action="MarkAsCompleted" asp-route-id="@reminder.ReminderId" method="post" class="flex-fill">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success w-100">
                                                    <i class="bi bi-check-circle"></i> Complete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Reminders" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-list"></i> View All Reminders
                    </a>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#quickAddReminderModal">
                        <i class="bi bi-plus-circle"></i> Quick Add Reminder
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Summary Statistics Cards -->
    <div class="row g-2 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-flower3" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalPlants</h2>
                            <p class="mb-0">Total Plants</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Plants" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Plants
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-tree" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalGardens</h2>
                            <p class="mb-0">Total Gardens</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Gardens" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Gardens
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-tools" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalEquipment</h2>
                            <p class="mb-0">Total Equipment</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Equipments" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Equipment
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-clipboard-data" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.TotalDailyRecords</h2>
                            <p class="mb-0">Total Records</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="DailyRecords" asp-action="Index" class="btn btn-light btn-sm w-100">
                        <i class="bi bi-grid"></i> View Records
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Environmental Averages (Last 30 Days) -->
    @if (Model.TotalDailyRecords > 0)
    {
        <div class="mb-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-thermometer-half"></i> Environmental Averages (Last 30 Days)
                    </h4>
