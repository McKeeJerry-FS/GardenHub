@model IEnumerable<GardenHub.Models.JournalEntry>

@{
    ViewData["Title"] = "Journal Entries";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4"><i class="bi bi-journal-text"></i> Journal Entries</h1>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-warning btn-lg">
                <i class="bi bi-plus-circle"></i> New Journal Entry
            </a>
        </div>
    </div>

    <!-- Statistics Cards - Single Row -->
    <div class="row g-3 mb-4">
        <div class="col">
            <div class="card bg-warning text-dark shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-journal-text fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count()</h4>
                    <small>Total Entries</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-info text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-image fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(j => j.ImageData != null)</h4>
                    <small>With Images</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-calendar-week fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(j => j.EntryDate >= DateTime.UtcNow.AddDays(-7))</h4>
                    <small>This Week</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body text-center py-3">
                    <i class="bi bi-calendar-month fs-2"></i>
                    <h4 class="mt-2 mb-0">@Model.Count(j => j.EntryDate >= DateTime.UtcNow.AddDays(-30))</h4>
                    <small>This Month</small>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTable Card -->
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-table"></i> All Journal Entries</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="journalTable" class="table table-striped table-hover table-bordered" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Garden</th>
                            <th>Entry Date</th>
                            <th>Content</th>
                            <th>Word Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var wordCount = item.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length;
                            
                            <tr>
                                <td class="text-center">
                                    @if (ViewData[$"EntryImage_{item.EntryId}"] != null && !string.IsNullOrEmpty(ViewData[$"EntryImage_{item.EntryId}"]!.ToString()))
                                    {
                                        <img src="@ViewData[$"EntryImage_{item.EntryId}"]" alt="Journal Entry" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="bi bi-journal-text text-muted fs-4"></i>
                                        </div>
                                    }
                                </td>
                                <td><span class="badge bg-primary">@item.Garden.GardenDescription</span></td>
                                <td data-order="@item.EntryDate.ToString("yyyy-MM-dd")">
                                    @item.EntryDate.ToString("MMM dd, yyyy")
                                    <br><small class="text-muted">(@((DateTime.UtcNow - item.EntryDate).Days) days ago)</small>
                                </td>
                                <td>@(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)</td>
                                <td data-order="@wordCount">
                                    <span class="badge bg-info">@wordCount words</span>
                                    <br><small class="text-muted">@item.Content.Length chars</small>
                                </td>
                                <td class="text-nowrap">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.EntryId" class="btn btn-primary" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.EntryId" class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.EntryId" class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#journalTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                order: [[2, 'desc']], // Sort by Entry Date descending
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search journal entries...",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    infoEmpty: "No journal entries available",
                    infoFiltered: "(filtered from _MAX_ total entries)",
                    paginate: {
                        first: '<i class="bi bi-chevron-double-left"></i>',
                        previous: '<i class="bi bi-chevron-left"></i>',
                        next: '<i class="bi bi-chevron-right"></i>',
                        last: '<i class="bi bi-chevron-double-right"></i>'
                    }
                },
                columnDefs: [
                    { orderable: false, targets: [0, 5] },
                    { className: 'text-center', targets: [0, 4, 5] }
                ]
            });
        });
    </script>
}
