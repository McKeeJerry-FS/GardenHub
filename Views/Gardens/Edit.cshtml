@model GardenHub.Models.Garden

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Garden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GardenId" />
            <div class="form-group">
                <label asp-for="GardenName" class="control-label"></label>
                <input asp-for="GardenName" class="form-control" />
                <span asp-validation-for="GardenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GardenDescription" class="control-label"></label>
                <input asp-for="GardenDescription" class="form-control" />
                <span asp-validation-for="GardenDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GardenLocation" class="control-label"></label>
                <select asp-for="GardenLocation" asp-items="Html.GetEnumSelectList<GardenHub.Models.Enums.Location>()" class="form-control">
                    <option value="">-- Select Garden Location --</option>
                </select>
                <span asp-validation-for="GardenLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<GardenHub.Models.Enums.GardenType>()" class="form-control">
                    <option value="">-- Select Garden Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GardenGrowMethod" class="control-label"></label>
                <select asp-for="GardenGrowMethod" asp-items="Html.GetEnumSelectList<GardenHub.Models.Enums.GrowMethod>()" class="form-control">
                    <option value="">-- Select Garden Grow Method --</option>
                </select>
                <span asp-validation-for="GardenGrowMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Image</label>
                @if (ViewData["CurrentImage"] != null && !string.IsNullOrEmpty(ViewData["CurrentImage"]!.ToString()))
                {
                    <div class="mb-2">
                        <img src="@ViewData["CurrentImage"]" alt="Current Garden Image" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                    </div>
                }
                <label asp-for="ImageFile" class="control-label">Change Garden Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <small class="form-text text-muted">Leave empty to keep current image</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
