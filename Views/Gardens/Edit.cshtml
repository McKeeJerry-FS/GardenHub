@model GardenHub.Models.Garden

@{
    ViewData["Title"] = "Edit Garden";
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-pencil"></i> Edit Garden</h1>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.GardenId" class="btn btn-info">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <input type="hidden" asp-for="GardenId" />

        <!-- Basic Information Card -->
        <div class="card mb-4 shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="bi bi-info-circle"></i> Basic Information</h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="GardenName" class="form-control" id="gardenName" placeholder="Garden Name" />
                            <label asp-for="GardenName" for="gardenName" class="form-label">
                                <i class="bi bi-house-door"></i> Garden Name
                            </label>
                            <span asp-validation-for="GardenName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Type" asp-items="Html.GetEnumSelectList<GardenHub.Models.Enums.GardenType>()" class="form-select" id="gardenType">
                                <option value="">-- Select Garden Type --</option>
                            </select>
                            <label asp-for="Type" for="gardenType">
                                <i class="bi bi-tag"></i> Garden Type
                            </label>
                            <span asp-validation-for="Type" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <textarea asp-for="GardenDescription" class="form-control" id="gardenDescription" placeholder="Garden Description" style="height: 120px"></textarea>
                            <label asp-for="GardenDescription" for="gardenDescription">
                                <i class="bi bi-card-text"></i> Garden Description
                            </label>
                            <span asp-validation-for="GardenDescription" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Location & Growing Information Card -->
        <div class="card mb-4 shadow">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="bi bi-geo-alt"></i> Location & Growing Information</h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="GardenLocation" asp-items="Html.GetEnumSelectList<GardenHub.Models.Enums.Location>()" class="form-select" id="gardenLocation">
                                <option value="">-- Select Garden Location --</option>
                            </select>
                            <label asp-for="GardenLocation" for="gardenLocation">
                                <i class="bi bi-pin-map"></i> Garden Location
                            </label>
                            <span asp-validation-for="GardenLocation" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="GardenGrowMethod" asp-items="Html.GetEnumSelectList<GardenHub.Models.Enums.GrowMethod>()" class="form-select" id="growMethod">
                                <option value="">-- Select Garden Grow Method --</option>
                            </select>
                            <label asp-for="GardenGrowMethod" for="growMethod">
                                <i class="bi bi-droplet"></i> Grow Method
                            </label>
                            <span asp-validation-for="GardenGrowMethod" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Timeline Card -->
        <div class="card mb-4 shadow">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0"><i class="bi bi-calendar-range"></i> Garden Timeline</h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="StartDate" type="date" class="form-control" id="startDate" />
                            <label asp-for="StartDate" for="startDate">
                                <i class="bi bi-calendar-check"></i> Start Date
                            </label>
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="EndDate" type="date" class="form-control" id="endDate" />
                            <label asp-for="EndDate" for="endDate">
                                <i class="bi bi-calendar-x"></i> End Date
                            </label>
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Garden Image Card -->
        <div class="card mb-4 shadow">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0"><i class="bi bi-image"></i> Garden Image</h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <!-- Current Image -->
                    @if (ViewData["CurrentImage"] != null && !string.IsNullOrEmpty(ViewData["CurrentImage"]!.ToString()))
                    {
                        <div class="col-md-6">
                            <div class="card bg-light h-100">
                                <div class="card-body text-center">
                                    <h5 class="card-title mb-3">
                                        <i class="bi bi-image-fill text-success"></i> Current Image
                                    </h5>
                                    <img src="@ViewData["CurrentImage"]" alt="Current Garden Image" class="img-fluid rounded shadow" style="max-height: 250px; object-fit: contain;" />
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Upload New Image -->
                    <div class="@(ViewData["CurrentImage"] != null ? "col-md-6" : "col-12")">
                        <div class="card bg-light h-100">
                            <div class="card-body">
                                <h5 class="card-title mb-3">
                                    <i class="bi bi-cloud-upload text-primary"></i> Upload New Image
                                </h5>
                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label">Change Garden Image</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" id="imageFile" onchange="previewImage(this)" />
                                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Leave empty to keep current image. Max size: 5MB
                                    </div>
                                </div>
                                
                                <!-- New Image Preview -->
                                <div id="imagePreview" class="text-center mt-3" style="display: none;">
                                    <p class="text-muted mb-2"><strong>New Image Preview:</strong></p>
                                    <img id="previewImg" src="#" alt="New Image Preview" class="img-fluid rounded shadow" style="max-height: 200px; object-fit: contain;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons Card -->
        <div class="card shadow">
            <div class="card-body">
                <div class="d-flex gap-2 justify-content-center flex-wrap">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.GardenId" class="btn btn-info btn-lg">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                    <a asp-action="Dashboard" asp-route-id="@Model.GardenId" class="btn btn-success btn-lg">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const previewImg = document.getElementById('previewImg');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                }
                
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
}
