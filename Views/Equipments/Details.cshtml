@model GardenHub.Models.Equipment
@using GardenHub.Models.Enums

@{
    ViewData["Title"] = "Equipment Details";
    var activeMaintenance = ViewData["ActiveMaintenance"] as GardenHub.Models.MaintenanceRecord;
    var maintenanceHistory = ViewData["MaintenanceHistory"] as List<GardenHub.Models.MaintenanceRecord> ?? new List<GardenHub.Models.MaintenanceRecord>();
    var lastCompletedMaintenance = maintenanceHistory.FirstOrDefault(m => m.Status == MaintenanceStatus.Completed);
}

<div class="garden-dashboard-fixed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0"><i class="bi bi-tools"></i> @Model.EquipmentName</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.EquipmentId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Equipment
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Maintenance Status Alert -->
    @if (Model.MaintenanceStatus != MaintenanceStatus.Operational)
    {
        var alertClass = Model.MaintenanceStatus switch
        {
            MaintenanceStatus.MaintenanceRequested => "alert-warning",
            MaintenanceStatus.UnderMaintenance => "alert-danger",
            _ => "alert-info"
        };

        <div class="alert @alertClass shadow mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-1 me-3"></i>
                <div>
                    <h4 class="alert-heading mb-2">
                        @Model.MaintenanceStatus.ToString().Replace("MaintenanceRequested", "Maintenance Requested").Replace("UnderMaintenance", "Under Maintenance")
                    </h4>
                    @if (activeMaintenance != null)
                    {
                        <p class="mb-0">
                            <strong>Requested:</strong> @activeMaintenance.RequestDate.ToString("MMMM dd, yyyy 'at' h:mm tt")<br />
                            @if (!string.IsNullOrWhiteSpace(activeMaintenance.Notes))
                            {
                                <strong>Notes:</strong> @activeMaintenance.Notes
                            }
                        </p>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Equipment Overview Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Equipment Overview</h3>
            @{
                var statusBadge = Model.MaintenanceStatus switch
                {
                    MaintenanceStatus.Operational => "bg-success",
                    MaintenanceStatus.MaintenanceRequested => "bg-warning text-dark",
                    MaintenanceStatus.UnderMaintenance => "bg-danger",
                    MaintenanceStatus.Completed => "bg-info",
                    _ => "bg-secondary"
                };
            }
            <span class="badge @statusBadge fs-6">
                @Model.MaintenanceStatus.ToString().Replace("MaintenanceRequested", "Maintenance Requested").Replace("UnderMaintenance", "Under Maintenance")
            </span>
        </div>
        <div class="card-body">
            <div class="garden-overview-layout">
                <div class="garden-overview-image">
                    @if (ViewData["EquipmentImage"] != null && !string.IsNullOrEmpty(ViewData["EquipmentImage"]!.ToString()))
                    {
                        <img src="@ViewData["EquipmentImage"]" alt="@Model.EquipmentName" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover; width: 100%;" />
                    }
                    else
                    {
                        <div class="text-center p-5 bg-light rounded">
                            <i class="bi bi-tools text-muted" style="font-size: 5rem;"></i>
                            <p class="text-muted mt-2">No image available</p>
                        </div>
                    }
                </div>
                <div class="garden-overview-details">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Equipment Name:</dt>
                        <dd class="col-sm-8">
                            <h4 class="mb-0">@Html.DisplayFor(model => model.EquipmentName)</h4>
                        </dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EquipmentDescription)</dd>

                        <dt class="col-sm-4">Equipment Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-danger fs-6">@Html.DisplayFor(model => model.EquipmentType)</span>
                        </dd>

                        <dt class="col-sm-4">Purchase Price:</dt>
                        <dd class="col-sm-8">
                            <span class="fs-5 text-success">
                                <i class="bi bi-currency-dollar"></i> @Model.PurchasePrice.ToString("N2")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Garden:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Garden != null)
                            {
                                <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-house-door"></i> @Html.DisplayFor(model => model.Garden.GardenDescription)
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No garden assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Equipment Statistics Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-graph-up"></i> Equipment Statistics</h3>
        </div>
        <div class="card-body">
            <div class="garden-stats-row">
                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check text-success" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">
                                @{
                                    var daysSincePurchase = (DateTime.UtcNow - Model.PurchaseDate).Days;
                                }
                                @daysSincePurchase
                            </h3>
                            <p class="text-muted mb-0">Days Since Purchase</p>
                        </div>
                    </div>
                </div>

                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-wrench text-warning" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">
                                @{
                                    var daysSinceMaintenance = (DateTime.UtcNow - Model.LastMaintenanceDate).Days;
                                }
                                @daysSinceMaintenance
                            </h3>
                            <p class="text-muted mb-0">Days Since Maintenance</p>
                        </div>
                    </div>
                </div>

                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-currency-dollar text-success" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">$@Model.PurchasePrice.ToString("N2")</h3>
                            <p class="text-muted mb-0">Purchase Price</p>
                        </div>
                    </div>
                </div>

                <div class="garden-stat-card">
                    <div class="card bg-light shadow-sm h-100">
                        <div class="card-body text-center">
                            @{
                                var statusIcon = Model.MaintenanceStatus switch
                                {
                                    MaintenanceStatus.Operational => "bi-check-circle text-success",
                                    MaintenanceStatus.MaintenanceRequested => "bi-exclamation-triangle text-warning",
                                    MaintenanceStatus.UnderMaintenance => "bi-tools text-danger",
                                    _ => "bi-info-circle text-info"
                                };
                            }
                            <i class="bi @statusIcon" style="font-size: 3rem;"></i>
                            <h3 class="display-6 mt-3 mb-2">@Model.MaintenanceStatus.ToString().Replace("MaintenanceRequested", "Maintenance Requested").Replace("UnderMaintenance", "Under Maintenance")</h3>
                            <p class="text-muted mb-0">Current Status</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Maintenance Actions Card -->
    @if (Model.MaintenanceStatus == MaintenanceStatus.Operational)
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0"><i class="bi bi-wrench-adjustable"></i> Request Maintenance</h3>
            </div>
            <div class="card-body">
                <form asp-action="RequestMaintenance" asp-route-id="@Model.EquipmentId" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="notes" class="form-label">Maintenance Notes (Optional)</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Describe the maintenance needed..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="bi bi-exclamation-triangle"></i> Request Maintenance
                    </button>
                </form>
            </div>
        </div>
    }
    else if (Model.MaintenanceStatus == MaintenanceStatus.MaintenanceRequested)
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="bi bi-play-circle"></i> Start Maintenance</h3>
            </div>
            <div class="card-body">
                <p class="mb-3">Equipment is awaiting maintenance. Click below to mark as under maintenance.</p>
                <form asp-action="StartMaintenance" asp-route-id="@Model.EquipmentId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-tools"></i> Start Maintenance
                    </button>
                </form>
            </div>
        </div>
    }
    else if (Model.MaintenanceStatus == MaintenanceStatus.UnderMaintenance)
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="bi bi-check-circle"></i> Complete Maintenance</h3>
            </div>
            <div class="card-body">
                <form asp-action="CompleteMaintenance" asp-route-id="@Model.EquipmentId" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="completionNotes" class="form-label">Completion Notes (Optional)</label>
                        <textarea class="form-control" id="completionNotes" name="completionNotes" rows="3" placeholder="Describe what was done during maintenance..."></textarea>
                    </div>
                    @if (activeMaintenance?.MaintenanceStartDate.HasValue == true)
                    {
                        var currentDowntime = DateTime.UtcNow - activeMaintenance.MaintenanceStartDate.Value;
                        <div class="alert alert-info">
                            <i class="bi bi-clock"></i> <strong>Current Downtime:</strong> 
                            @if (currentDowntime.Days > 0)
                            {
                                <text>@currentDowntime.Days day(s) </text>
                            }
                            @currentDowntime.Hours hour(s) @currentDowntime.Minutes minute(s)
                        </div>
                    }
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Complete Maintenance & Return to Service
                    </button>
                </form>
            </div>
        </div>
    }

    <!-- Last Maintenance Card -->
    @if (lastCompletedMaintenance != null)
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0"><i class="bi bi-clock-history"></i> Last Maintenance</h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card bg-light h-100">
                            <div class="card-body">
                                <h5 class="card-title border-bottom pb-2 mb-3">
                                    <i class="bi bi-calendar-event text-primary"></i> Maintenance Date
                                </h5>
                                <p class="mb-2"><strong>Completed:</strong></p>
                                <p class="fs-5 text-muted">@lastCompletedMaintenance.MaintenanceEndDate?.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                                <small class="text-muted">@((DateTime.UtcNow - (lastCompletedMaintenance.MaintenanceEndDate ?? DateTime.UtcNow)).Days) days ago</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card bg-light h-100">
                            <div class="card-body">
                                <h5 class="card-title border-bottom pb-2 mb-3">
                                    <i class="bi bi-hourglass-split text-warning"></i> Downtime Duration
                                </h5>
                                @if (lastCompletedMaintenance.DowntimeDuration.HasValue)
                                {
                                    var downtime = lastCompletedMaintenance.DowntimeDuration.Value;
                                    <p class="fs-5 text-muted">
                                        @if (downtime.Days > 0)
                                        {
                                            <text>@downtime.Days day(s) </text>
                                        }
                                        @downtime.Hours hour(s) @downtime.Minutes minute(s)
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted">No downtime recorded</p>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(lastCompletedMaintenance.Notes))
                    {
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title border-bottom pb-2 mb-3">
                                        <i class="bi bi-journal-text text-secondary"></i> Maintenance Notes
                                    </h5>
                                    <p class="mb-0" style="white-space: pre-line;">@lastCompletedMaintenance.Notes</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Maintenance History Card -->
    @if (maintenanceHistory.Any())
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-dark text-white">
                <h3 class="mb-0"><i class="bi bi-list-ul"></i> Maintenance History</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Requested</th>
                                <th>Started</th>
                                <th>Completed</th>
                                <th>Downtime</th>
                                <th>Requested By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in maintenanceHistory)
                            {
                                var recordStatusBadge = record.Status switch
                                {
                                    MaintenanceStatus.Operational => "bg-success",
                                    MaintenanceStatus.MaintenanceRequested => "bg-warning text-dark",
                                    MaintenanceStatus.UnderMaintenance => "bg-danger",
                                    MaintenanceStatus.Completed => "bg-info",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td><span class="badge @recordStatusBadge">@record.Status.ToString().Replace("MaintenanceRequested", "Maintenance Requested").Replace("UnderMaintenance", "Under Maintenance")</span></td>
                                    <td>@record.RequestDate.ToString("MM/dd/yyyy h:mm tt")</td>
                                    <td>@(record.MaintenanceStartDate?.ToString("MM/dd/yyyy h:mm tt") ?? "-")</td>
                                    <td>@(record.MaintenanceEndDate?.ToString("MM/dd/yyyy h:mm tt") ?? "-")</td>
                                    <td>
                                        @if (record.DowntimeDuration.HasValue)
                                        {
                                            var dt = record.DowntimeDuration.Value;
                                            if (dt.Days > 0)
                                            {
                                                <text>@dt.Days day(s) </text>
                                            }
                                            <text>@dt.Hours hour(s) @dt.Minutes min(s)</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>@(record.RequestedBy?.FirstName ?? "Unknown") @(record.RequestedBy?.LastName ?? "")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Timeline Information Card -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-clock-history"></i> Timeline Information</h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card bg-light h-100">
                        <div class="card-body">
                            <h5 class="card-title border-bottom pb-2 mb-3">
                                <i class="bi bi-cart-check text-success"></i> Purchase Information
                            </h5>
                            <p class="mb-2"><strong>Purchase Date:</strong></p>
                            <p class="fs-5 text-muted">@Model.PurchaseDate.ToString("MMMM dd, yyyy")</p>
                            <small class="text-muted">@daysSincePurchase days ago</small>
                        </div>
                    </div>
                </div>

                @if (Model.Garden != null)
                {
                    <div class="col-md-6">
                        <div class="card bg-light h-100">
                            <div class="card-body">
                                <h5 class="card-title border-bottom pb-2 mb-3">
                                    <i class="bi bi-house-door text-primary"></i> Garden Information
                                </h5>
                                <p class="mb-1"><strong>Garden Name:</strong></p>
                                <p class="text-muted">@Model.Garden.GardenName</p>
                                <div class="text-center mt-3">
                                    <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-outline-primary">
                                        <i class="bi bi-speedometer2"></i> View Garden Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h3>
        </div>
        <div class="card-body">
            <div class="d-flex gap-2 flex-wrap justify-content-center">
                <a asp-action="Edit" asp-route-id="@Model?.EquipmentId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Equipment
                </a>
                @if (Model.Garden != null)
                {
                    <a asp-controller="Gardens" asp-action="Dashboard" asp-route-id="@Model.Garden.GardenId" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Go to Garden
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> View All Equipment
                </a>
            </div>
        </div>
    </div>
</div>
